<div data-controller="alert" 
     data-alert-auto-close-value="true" 
     data-alert-delay-value="5000"
     class="flex items-center justify-between p-6 text-base text-green-800 bg-green-50 dark:bg-gray-800 dark:text-green-400" 
     role="alert">
  <div class="flex items-center">
    <svg class="flex-shrink-0 inline w-6 h-6 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
    </svg>
    <span class="sr-only"><%= t('alerts.info') %></span>
    <div>
      <span class="text-lg font-semibold">!</span> <%= notice %>
    </div>
  </div>
  <button data-action="click->alert#dismiss" 
          class="ml-4 text-green-800 hover:text-green-900 focus:outline-none focus:ring-2 focus:ring-green-500"
          aria-label="Cerrar alerta">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
  </button>
</div>