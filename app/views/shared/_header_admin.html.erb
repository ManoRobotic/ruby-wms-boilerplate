<div class="bg-gray-100" data-controller="sidebar">
    <!-- Botón para abrir/cerrar el sidebar -->
    <button data-sidebar-target="toggle" 
            data-action="click->sidebar#toggle"
            type="button" 
            class="fixed z-50 inline-flex items-center p-2 mt-3 ml-5 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only"><%= t('admin.sidebar.open') %></span>
        <svg class="w-6 h-6" aria-hidden="true" fill="gray" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
        </svg>
    </button>

    <!-- Sidebar -->
    <nav data-sidebar-target="sidebar" 
         class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full lg:translate-x-0" 
         aria-label="Sidebar">
        <div class="flex flex-col h-full px-3 py-4 overflow-y-auto bg-gray-800 rounded-r-lg md:rounded-none">
            <!-- Main Navigation Menu -->
            <div class="flex-1">
                <ul class="mt-16 space-y-2 font-medium text-white">
                    <% 
                    # Define all menu items with their required permissions
                    menu_items = [
                        { path: admin_path, icon: 'gauge-high', label: t('admin.sidebar.dashboard'), permission: 'read_admin_dashboard' },
                        { path: admin_orders_path, icon: 'truck-fast', label: t('admin.sidebar.orders'), permission: 'read_orders' },
                        { path: admin_production_orders_path, icon: 'industry', label: 'Órdenes de Producción', permission: 'read_orders' },
                        { path: admin_products_path, icon: 'cart-shopping', label: t('admin.sidebar.products'), permission: 'read_products' },
                        { path: admin_categories_path, icon: 'list', label: t('admin.sidebar.categories'), permission: 'manage_categories' },
                        { path: admin_warehouses_path, icon: 'warehouse', label: t('admin.sidebar.warehouses'), permission: 'read_warehouse' },
                        { path: admin_tasks_path, icon: 'tasks', label: t('admin.sidebar.tasks'), permission: 'read_tasks' },
                        { path: admin_pick_lists_path, icon: 'clipboard-list', label: t('admin.sidebar.pick_lists'), permission: 'read_pick_lists' },
                        { path: admin_users_path, icon: 'users', label: t('admin.sidebar.users'), permission: 'manage_users' },
                        { path: admin_inventory_transactions_path, icon: 'arrow-right-arrow-left', label: t('admin.sidebar.inventory_transactions'), permission: 'read_inventory' },
                        { path: admin_receipts_path, icon: 'truck-ramp-box', label: t('admin.sidebar.receipts'), permission: 'manage_receipts' },
                        { path: admin_cycle_counts_path, icon: 'calculator', label: t('admin.sidebar.cycle_counts'), permission: 'manage_inventory' },
                        { path: admin_shipments_path, icon: 'shipping-fast', label: t('admin.sidebar.shipments'), permission: 'manage_shipments' },
                        { path: admin_manual_printing_path, icon: 'print', label: t('admin.sidebar.manual_printing'), permission: 'manage_inventory' }
                    ]
                    
                    # Filter menu items based on user permissions
                    visible_items = menu_items.select do |item|
                      current_admin || can?(item[:permission])
                    end
                    
                    visible_items.each do |item| %>
                        <li>
                            <%= link_to item[:path], 
                                data: { 
                                  sidebar_target: "link",
                                  action: "click->sidebar#linkClicked"
                                },
                                class: "flex items-center p-3 rounded-lg hover:bg-gray-700 #{'bg-gray-700' if current_page?(item[:path])}" do %>
                                <%= icon('fa-solid', item[:icon], class: 'w-5 h-5 mr-2') %> 
                                <span><%= item[:label] %></span>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
            
            <!-- Bottom Section: Notifications and User Profile -->
            <div class="mt-auto mb-4 space-y-3 text-white">
                <div class="border-t border-gray-600 my-4"></div>
                    <!-- Notifications -->
                    <% current_user_or_admin_instance = current_user || current_admin %>
                    <% if current_user_or_admin_instance %>
                        <div class="relative" data-controller="dropdown">
                            <button data-dropdown-target="trigger" 
                                    data-action="click->dropdown#toggle"
                                    class="flex items-center w-full p-3 rounded-lg hover:bg-gray-700 focus:outline-none">
                                <%= icon('fa-solid', 'bell', class: 'w-5 h-5 mr-2') %>
                                <span>Notificaciones</span>
                                <% if current_user_or_admin_instance.unread_notifications_count > 0 %>
                                    <span class="notification-count ml-auto bg-red-500 text-xs rounded-full px-2 py-1 min-w-[20px] text-center">
                                        <%= current_user_or_admin_instance.unread_notifications_count %>
                                    </span>
                                <% end %>
                                <%= icon('fa-solid', 'chevron-up', class: 'w-4 h-4 ml-auto transform transition-transform', data: { dropdown_target: 'icon' }) %>
                            </button>
                            
                            <!-- Notifications Dropdown -->
                            <div data-dropdown-target="menu" 
                                 class="hidden absolute bottom-full left-0 right-0 mb-2 bg-white rounded-lg shadow-lg border z-50 max-h-80 overflow-y-auto">
                                <div class="p-3 border-b border-gray-200">
                                    <h3 class="font-semibold text-gray-900">Notificaciones</h3>
                                    <% if current_user_or_admin_instance.unread_notifications_count > 0 %>
                                        <%= link_to "Marcar todas como leídas", "#", 
                                            class: "text-xs text-blue-600 hover:text-blue-800",
                                            data: { 
                                                controller: "notifications",
                                                action: "click->notifications#markAllAsRead"
                                            } %>
                                    <% end %>
                                </div>
                                <div class="max-h-60 overflow-y-auto">
                                    <% current_user_or_admin_instance.recent_notifications.each do |notification| %>
                                        <div class="notification-item p-3 border-b border-gray-100 hover:bg-gray-50 <%= 'bg-blue-50' unless notification.read? %>"
                                             data-controller="notifications"
                                             data-notification-id="<%= notification.id %>">
                                            <div class="flex items-start space-x-3">
                                                <div class="flex-shrink-0">
                                                    <% case notification.notification_type %>
                                                    <% when 'task_assigned' %>
                                                        <%= icon('fa-solid', 'tasks', class: 'w-5 h-5 text-blue-600') %>
                                                    <% when 'task_status_changed' %>
                                                        <%= icon('fa-solid', 'sync-alt', class: 'w-5 h-5 text-green-600') %>
                                                    <% when 'order_updated' %>
                                                        <%= icon('fa-solid', 'shopping-cart', class: 'w-5 h-5 text-orange-600') %>
                                                    <% when 'inventory_alert' %>
                                                        <%= icon('fa-solid', 'exclamation-triangle', class: 'w-5 h-5 text-yellow-600') %>
                                                    <% when 'system' %>
                                                        <%= icon('fa-solid', 'cog', class: 'w-5 h-5 text-purple-600') %>
                                                    <% else %>
                                                        <%= icon('fa-solid', 'info-circle', class: 'w-5 h-5 text-gray-600') %>
                                                    <% end %>
                                                </div>
                                                <div class="flex-1 min-w-0 cursor-pointer"
                                                     data-action="click->notifications#markAsRead">
                                                    <p class="text-sm font-medium text-gray-900">
                                                        <%= notification.title %>
                                                    </p>
                                                    <p class="text-sm text-gray-600">
                                                        <%= notification.message %>
                                                    </p>
                                                    <p class="text-xs text-gray-500 mt-1">
                                                        <%= notification.time_ago %>
                                                    </p>
                                                </div>
                                                <% unless notification.read? %>
                                                    <div class="flex-shrink-0 unread-indicator">
                                                        <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                                                    </div>
                                                <% end %>
                                            </div>
                                        </div>
                                    <% end %>
                                    <% if current_user_or_admin_instance.notifications.empty? %>
                                        <div class="p-4 text-center text-gray-500">
                                            <p>No tienes notificaciones</p>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>

                    <!-- User Profile - Discord Style -->
                    <div class="relative" data-controller="dropdown">
                        <button data-dropdown-target="trigger" 
                                data-action="click->dropdown#toggle"
                                class="flex items-center w-full p-3 rounded-lg hover:bg-gray-700 focus:outline-none group">
                            <!-- Avatar -->
                            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-to-r from-purple-500 to-blue-500 flex items-center justify-center mr-3">
                                <% current_user_display = current_user || current_admin %>
                                <span class="text-sm font-semibold text-white">
                                    <%= current_user_display&.display_name&.first&.upcase || current_user_display&.email&.first&.upcase || "?" %>
                                </span>
                            </div>
                            
                            <!-- User Info -->
                            <div class="flex-1 text-left">
                                <div class="text-sm font-medium text-white truncate">
                                    <%= current_user_display&.display_name || current_user_display&.email || "Usuario" %>
                                </div>
                                <div class="text-xs text-gray-300 truncate">
                                    <% if current_user %>
                                        <%= current_user.role_display %>
                                        <% if current_user.warehouse %>
                                            • <%= current_user.warehouse.name %>
                                        <% end %>
                                    <% elsif current_admin %>
                                        Admin
                                    <% end %>
                                </div>
                            </div>

                            <!-- Online Status -->
                            <div class="flex-shrink-0 w-3 h-3 ml-4 bg-green-500 rounded-full border-2 border-gray-800 mr-2"></div>
                            
                            <!-- Dropdown Arrow -->
                        </button>
                        
                        <!-- User Menu Dropdown -->
                        <div data-dropdown-target="menu" 
                             class="hidden absolute bottom-full left-0 right-0 mb-2 bg-white rounded-lg shadow-lg border z-50">
                            <div class="p-3 border-b border-gray-200">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-r from-purple-500 to-blue-500 flex items-center justify-center">
                                        <span class="text-lg font-semibold text-white">
                                            <%= current_user_display&.display_name&.first&.upcase || current_user_display&.email&.first&.upcase || "?" %>
                                        </span>
                                    </div>
                                    <div class="flex-1">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%= current_user_display&.display_name || current_user_display&.email || "Usuario" %>
                                        </div>
                                        <div class="text-xs text-gray-600">
                                            <% if current_user %>
                                                <%= current_user.role_display %>
                                            <% elsif current_admin %>
                                                Administrador
                                            <% end %>
                                        </div>
                                    </div>
                                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                </div>
                            </div>
                            
                            <div class="py-2">
                                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <%= icon('fa-solid', 'user', class: 'w-4 h-4 mr-3 text-gray-400') %>
                                    Mi Perfil
                                </a>
                                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <%= icon('fa-solid', 'cog', class: 'w-4 h-4 mr-3 text-gray-400') %>
                                    Configuración
                                </a>
                                <div class="border-t border-gray-200 my-2"></div>
                                <%= form_with url: destroy_admin_session_path, method: :delete, class: 'inline w-full' do %>
                                    <button type="submit" 
                                            class="flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50" 
                                            data-confirm="<%= t('admin.sidebar.logout_confirm') %>">
                                        <%= icon('fa-solid', 'sign-out', class: 'w-4 h-4 mr-3') %>
                                        <%= t('admin.sidebar.logout') %>
                                    </button>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>

