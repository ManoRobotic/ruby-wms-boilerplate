<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <!-- Header -->
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              <%= t('admin.sidebar.manual_printing') %>
            </h1>
            <p class="text-sm text-gray-600 mt-2">Control de impresora TSC TX200 y báscula digital</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Layout 2 Columnas -->
    <div class="px-6 pb-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" 
           data-controller="serial printer print-form" 
           data-serial-base-url-value="/api/serial"
           data-serial-auto-connect-value="true"
           data-action="serial:weightRead->print-form#updateWeight serial:labelPrinted->print-form#onLabelPrinted">
      
        <!-- Columna Izquierda: Hardware y Terminal -->
        <div class="space-y-6">
          <%= render 'admin/serial/panel' %>
        </div>

        <!-- Columna Derecha: Configuración de Etiqueta -->
        <div class="bg-white rounded-lg border shadow-md p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Configuración de Etiqueta</h2>
          <%= form_with url: admin_manual_printing_print_test_path, method: :post, local: false, id: "print-form", class: "space-y-4", data: { controller: "print-form" } do |form| %>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :product_name, "Nombre del Producto", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :product_name, placeholder: "Ej: Rollo plástico 1kg", class: "block w-full px-3 py-2 text-base placeholder-gray-400 border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
              </div>
              <div>
                <%= form.label :barcode_data, "Código de Barras", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :barcode_data, placeholder: "Ej: 1234567890123", class: "block w-full px-3 py-2 text-base placeholder-gray-400 border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500", required: true %>
              </div>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-700 mb-2">Dimensiones (mm)</h3>
              <div class="grid grid-cols-3 gap-4">
                <div>
                  <%= form.label :ancho_mm, "Ancho", class: "block text-xs text-gray-600 mb-1" %>
                  <%= form.number_field :ancho_mm, value: 80, min: 10, max: 200, step: 1, class: "block w-full px-3 py-2 text-base border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
                </div>
                <div>
                  <%= form.label :alto_mm, "Alto", class: "block text-xs text-gray-600 mb-1" %>
                  <%= form.number_field :alto_mm, value: 50, min: 10, max: 200, step: 1, class: "block w-full px-3 py-2 text-base border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
                </div>
                <div>
                  <%= form.label :gap_mm, "Separación", class: "block text-xs text-gray-600 mb-1" %>
                  <%= form.number_field :gap_mm, value: 2, min: 0, max: 10, step: 0.5, class: "block w-full px-3 py-2 text-base border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
                </div>
              </div>
            </div>

            <div class="p-4 rounded-md" style="background-color: var(--color-blue-gem-50);">
              <div class="flex items-center justify-between text-sm">
                <span>Peso actual: <span data-print-form-target="weightDisplay" class="font-semibold">0.0 kg</span></span>
              </div>
            </div>

            <%= form.hidden_field :current_weight, value: "0.0", data: { "print-form-target": "weightField" } %>

            <div id="weight-warning" class="p-3 rounded-md text-sm" style="background-color: var(--color-mexican-red-100); color: var(--color-mexican-red-800);">
              ⚠️ Debe capturar el peso del producto antes de imprimir
            </div>

            <button data-printer-target="printButton" data-print-form-target="submitButton" type="submit" class="btn btn-primary w-full py-3 disabled:opacity-50" disabled>
              Imprimir Etiqueta
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>