<!-- Vista de Impresi√≥n Manual -->
<div class="w-full px-4 mb-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <!-- Header -->
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              <%= t('admin.sidebar.manual_printing') %>
            </h1>
            <p class="text-sm text-gray-600 mt-2">Control de impresora TSC TX200 y b√°scula digital</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Layout 2 Columnas -->
    <div class="px-6 pb-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" data-controller="printer">
      
      <!-- Columna Izquierda: Hardware y Terminal -->
      <div class="space-y-6">
        <!-- Control de Hardware -->
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Control de Hardware</h2>
          <div class="space-y-4">
            <!-- Impresora -->
            <div>
              <h3 class="text-sm font-medium text-gray-700 mb-3">üñ®Ô∏è Impresora TSC TX200</h3>
              <div id="connection-status" class="mb-3 p-3 rounded-md bg-gray-50 border">
                <div class="flex items-center">
                  <div data-printer-target="statusIndicator" class="w-3 h-3 rounded-full bg-red-500 mr-3"></div>
                  <span data-printer-target="statusText" class="text-gray-700 text-sm">Impresora desconectada</span>
                </div>
              </div>
              <button data-action="click->printer#connectPrinter" 
                      data-printer-target="connectButton"
                      type="button" 
                      class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200 disabled:opacity-50 mb-2">
                Conectar Impresora
              </button>
              <div class="grid grid-cols-2 gap-2">
                <button data-action="click->printer#calibrateSensor" 
                        data-printer-target="calibrateButton"
                        type="button" 
                        class="px-3 py-2 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm rounded-md transition-colors duration-200 disabled:opacity-50" 
                        disabled>
                  Calibrar
                </button>
                <button data-action="click->printer#checkStatus" 
                        data-printer-target="statusButton"
                        type="button" 
                        class="px-3 py-2 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm rounded-md transition-colors duration-200 disabled:opacity-50" 
                        disabled>
                  Estado
                </button>
              </div>
            </div>

            <!-- B√°scula -->
            <div data-controller="scale-reader" data-scale-reader-max-weight-value="100">
              <h3 class="text-sm font-medium text-gray-700 mb-3">‚öñÔ∏è B√°scula Digital</h3>
              
              <div class="text-center mb-4">
                <div class="inline-flex items-center justify-center w-24 h-24 rounded-full border-2 border-gray-200 mb-3">
                  <div class="text-center">
                    <span data-scale-reader-target="weightDisplay" class="text-xl font-bold text-gray-800">0.0</span>
                    <div class="text-xs text-gray-500">kg</div>
                  </div>
                </div>
              </div>
              <div id="scale-status" class="mb-3 p-3 rounded-md bg-gray-50 border">
                <div class="flex items-center">
                  <div data-scale-reader-target="scaleIndicator" class="w-3 h-3 rounded-full bg-red-500 mr-3"></div>
                  <span data-scale-reader-target="scaleStatus" class="text-gray-700 text-sm">B√°scula desconectada</span>
                </div>
              </div>
              <div class="space-y-2">
                <button data-action="click->scale-reader#connectScale" 
                        data-scale-reader-target="connectButton"
                        class="w-full px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-md transition-colors duration-200 disabled:opacity-50">
                  Conectar B√°scula
                </button>
                <button data-action="click->scale-reader#readWeight" 
                        data-scale-reader-target="readButton"
                        class="w-full px-3 py-2 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm rounded-md transition-colors duration-200 disabled:opacity-50" 
                        disabled>
                  Leer Peso
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Columna Derecha: Configuraci√≥n de Etiqueta -->
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Configuraci√≥n de Etiqueta</h2>
        <%= form_with url: admin_manual_printing_print_test_path, method: :post, 
                     local: false, id: "print-form", 
                     class: "space-y-4",
                     data: { controller: "print-form" } do |form| %>
        
          <!-- Informaci√≥n del Producto -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :product_name, "Nombre del Producto", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :product_name, placeholder: "Ej: Rollo pl√°stico 1kg", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div>
              <%= form.label :barcode_data, "C√≥digo de Barras", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :barcode_data, placeholder: "Ej: 1234567890123", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  required: true %>
            </div>
          </div>

          <!-- Dimensiones de Etiqueta -->
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Dimensiones (mm)</h3>
            <div class="grid grid-cols-3 gap-4">
              <div>
                <%= form.label :ancho_mm, "Ancho", class: "block text-xs text-gray-600 mb-1" %>
                <%= form.number_field :ancho_mm, value: 80, min: 10, max: 200, step: 1,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
              </div>
              <div>
                <%= form.label :alto_mm, "Alto", class: "block text-xs text-gray-600 mb-1" %>
                <%= form.number_field :alto_mm, value: 50, min: 10, max: 200, step: 1,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
              </div>
              <div>
                <%= form.label :gap_mm, "Separaci√≥n", class: "block text-xs text-gray-600 mb-1" %>
                <%= form.number_field :gap_mm, value: 2, min: 0, max: 10, step: 0.5,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
              </div>
            </div>
          </div>

          <!-- Formato de Impresi√≥n -->
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Formato de Impresi√≥n</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
              <label class="flex items-center p-3 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
                <%= form.radio_button :print_format, "bag", checked: true, 
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                <span class="ml-2 text-sm font-medium text-gray-900">Formato Bolsa</span>
              </label>
              
              <label class="flex items-center p-3 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
                <%= form.radio_button :print_format, "box", 
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                <span class="ml-2 text-sm font-medium text-gray-900">Formato Caja</span>
              </label>
              
              <label class="flex items-center p-3 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
                <%= form.radio_button :print_format, "custom", 
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                <span class="ml-2 text-sm font-medium text-gray-900">Personalizado</span>
              </label>
            </div>
          </div>

          <!-- Estado y Peso -->
          <div class="bg-gray-50 rounded-md p-3">
            <div class="flex items-center justify-between text-sm">
              <span>Peso actual: <span data-print-form-target="weightDisplay" class="font-semibold">0.0 kg</span></span>
              <div data-print-form-target="formatInfo">
                <span class="text-gray-600" id="bag-info">Formato Bolsa</span>
                <span class="text-gray-600 hidden" id="box-info">Formato Caja</span>
                <span class="text-gray-600 hidden" id="custom-info">Personalizado</span>
              </div>
            </div>
          </div>

          <!-- Campo oculto para el peso -->
          <%= form.hidden_field :current_weight, value: "0.0", data: { "print-form-target": "weightField" } %>

          <!-- Alerta de Peso -->
          <div id="weight-warning" class="p-3 bg-red-50 border border-red-200 rounded-md text-red-700 text-sm">
            ‚ö†Ô∏è Debe capturar el peso del producto antes de imprimir
          </div>

          <!-- Bot√≥n de Impresi√≥n -->
          <button data-printer-target="printButton"
                  data-print-form-target="submitButton"
                  type="submit" 
                  class="w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200 disabled:opacity-50" 
                  disabled>
            Imprimir Etiqueta
          </button>
        <% end %>
      </div>
      </div>

      <!-- Registro de Actividad - Full Width -->
      <div class="mt-6 bg-white rounded-lg border border-gray-200" data-controller="printer">
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Registro de Actividad</h2>
          <button data-action="click->printer#clearLog"
                  type="button" 
                  class="px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm rounded-md transition-colors">
            Limpiar
          </button>
        </div>
        <div class="p-4">
          <div id="activity-log" class="bg-gray-900 text-green-400 font-mono text-sm p-4 rounded-md h-64 overflow-y-auto border">
            <div class="text-gray-500">
              <span class="text-blue-400">[SISTEMA]</span> 
              <span class="text-gray-400"><%= Time.current.strftime("%H:%M:%S") %></span>
              Sistema de impresi√≥n inicializado...
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

