<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Órdenes de Producción
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Nueva Orden de Producción', new_admin_production_order_path, 
                class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-600 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Filters -->
    <div class="px-4 mb-6">
      <%= render 'shared/table_filters', 
          search_placeholder: 'Buscar por número de orden o producto...',
          filters: [
            {
              name: :warehouse_id,
              type: 'select',
              label: 'Almacén',
              options: Warehouse.all.pluck(:name, :id),
              prompt: 'Todos los almacenes'
            },
            {
              name: :status,
              type: 'select', 
              label: 'Estado',
              options: ProductionOrder::STATUSES.map { |s| [s.humanize, s] },
              prompt: 'Todos los estados'
            },
            {
              name: :priority,
              type: 'select',
              label: 'Prioridad',
              options: ProductionOrder::PRIORITIES.map { |p| [p.humanize, p] },
              prompt: 'Todas las prioridades'
            },
            {
              name: :start_date,
              type: 'date',
              label: 'Fecha desde'
            },
            {
              name: :end_date,
              type: 'date', 
              label: 'Fecha hasta'
            }
          ] %>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table class="w-full text-left table-auto min-w-max">
            <thead>
              <tr class="border-b border-slate-300 bg-slate-50">
                <th class="p-4 text-sm font-semibold text-slate-800">Número de Orden</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Producto</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Estado</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Prioridad</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Cantidad</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Progreso</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Estimado</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @production_orders.each do |order| %>
                <tr class="border-b border-slate-200 hover:bg-slate-50">
                  <td class="p-4">
                    <%= link_to order.order_number, admin_production_order_path(order), 
                        class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.product.name %>
                  </td>
                  <td class="p-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case order.status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'scheduled' then 'bg-blue-100 text-blue-800'
                          when 'in_progress' then 'bg-green-100 text-green-800'
                          when 'paused' then 'bg-orange-100 text-orange-800'
                          when 'completed' then 'bg-gray-100 text-gray-800'
                          when 'cancelled' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= order.status.humanize %>
                    </span>
                  </td>
                  <td class="p-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case order.priority
                          when 'low' then 'bg-gray-100 text-gray-800'
                          when 'medium' then 'bg-blue-100 text-blue-800'
                          when 'high' then 'bg-orange-100 text-orange-800'
                          when 'urgent' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= order.priority.humanize %>
                    </span>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.quantity_produced || 0 %> / <%= order.quantity_requested %>
                  </td>
                  <td class="p-4">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= order.progress_percentage %>%"></div>
                    </div>
                    <span class="text-xs text-gray-600"><%= order.progress_percentage %>%</span>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.estimated_completion&.strftime("%d/%m/%Y") || 'N/A' %>
                    <% if order.is_overdue? %>
                      <span class="text-red-600 text-xs block">Atrasado</span>
                    <% end %>
                  </td>
                  <td class="p-4">
                    <div class="flex space-x-2">
                      <%= link_to admin_production_order_path(order), 
                          class: "text-blue-600 hover:text-blue-800" do %>
                        <%= icon('fa-solid', 'eye', class: 'w-4 h-4') %>
                      <% end %>
                      
                      <% if order.can_be_started? %>
                        <%= link_to start_admin_production_order_path(order), 
                            method: :patch,
                            class: "text-green-600 hover:text-green-800",
                            title: "Iniciar" do %>
                          <%= icon('fa-solid', 'play', class: 'w-4 h-4') %>
                        <% end %>
                      <% end %>
                      
                      <% if order.can_be_paused? %>
                        <%= link_to pause_admin_production_order_path(order), 
                            method: :patch,
                            class: "text-orange-600 hover:text-orange-800",
                            title: "Pausar" do %>
                          <%= icon('fa-solid', 'pause', class: 'w-4 h-4') %>
                        <% end %>
                      <% end %>
                      
                      <% if order.can_be_completed? %>
                        <%= link_to complete_admin_production_order_path(order), 
                            method: :patch,
                            class: "text-blue-600 hover:text-blue-800",
                            title: "Completar" do %>
                          <%= icon('fa-solid', 'check', class: 'w-4 h-4') %>
                        <% end %>
                      <% end %>
                      
                      <%= link_to edit_admin_production_order_path(order), 
                          class: "text-yellow-600 hover:text-yellow-800" do %>
                        <%= icon('fa-solid', 'edit', class: 'w-4 h-4') %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              
              <% if @production_orders.empty? %>
                <tr>
                  <td colspan="8" class="p-8 text-center text-gray-500">
                    No hay órdenes de producción disponibles.
                    <%= link_to 'Crear primera orden', new_admin_production_order_path, 
                        class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @production_orders %>
        
      </div>
    </section>
  </div>
</div>