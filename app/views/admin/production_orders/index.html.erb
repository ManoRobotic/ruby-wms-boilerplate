<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8" data-controller="production-order">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Órdenes de Producción
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= form_with url: import_excel_admin_production_orders_path, method: :post, local: true, 
                class: "inline-block mt-12" do |form| %>
              <%= form.submit "Importar Excel", 
                  class: "flex items-center gap-3 rounded-lg bg-purple-600 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85 cursor-pointer",
                  data: { confirm: "¿Estás seguro de que quieres importar los datos desde merged.xlsx?" } %>
            <% end %>
            <%= link_to admin_production_orders_scan_barcode_path, 
                class: "mt-12 flex items-center gap-3 rounded-lg bg-green-600 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" do %>
              <%= icon('fa-solid', 'qrcode', class: 'w-4 h-4') %>
              Escáner
            <% end %>
            <%= link_to 'Nueva Orden de Producción', new_admin_production_order_path, 
                class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-600 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Filters -->
    <div class="px-4 mb-6">
      <%= render 'shared/table_filters', 
          search_placeholder: 'Buscar por número de orden o producto...',
          filters: [
            {
              name: :warehouse_id,
              type: 'select',
              label: 'Almacén',
              options: Warehouse.all.pluck(:name, :id),
              prompt: 'Todos los almacenes'
            },
            {
              name: :status,
              type: 'select', 
              label: 'Estado',
              options: ProductionOrder::STATUSES.map { |s| [s.humanize, s] },
              prompt: 'Todos los estados'
            },
            {
              name: :priority,
              type: 'select',
              label: 'Prioridad',
              options: ProductionOrder::PRIORITIES.map { |p| [p.humanize, p] },
              prompt: 'Todas las prioridades'
            },
            {
              name: :start_date,
              type: 'date',
              label: 'Fecha desde'
            },
            {
              name: :end_date,
              type: 'date', 
              label: 'Fecha hasta'
            }
          ] %>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table class="w-full text-left table-auto min-w-max">
            <thead>
              <tr class="border-b border-slate-300 bg-slate-50">
                <th class="p-4 text-sm font-semibold text-slate-800">No. OPRO</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Producto</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Lote</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Cantidad</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Carga</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Peso</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Estado</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Fecha</th>
                <th class="p-4 text-sm font-semibold text-slate-800">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @production_orders.each do |order| %>
                <tr class="border-b border-slate-200 hover:bg-slate-50 cursor-pointer"
                    data-order-id="<%= order.id %>"
                    data-action="click->production-order#openModal">
                  <td class="p-4">
                    <span class="text-blue-600 font-medium">
                      <%= order.no_opro.present? ? order.no_opro : order.order_number %>
                    </span>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.product.name %>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.lote_referencia || '-' %>
                  </td>
                  <td class="p-4 text-sm text-slate-700 font-medium">
                    <%= order.quantity_requested %>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.carga_copr&.to_f || '-' %>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <% if order.peso.present? %>
                      <span class="inline-flex items-center px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">
                        <%= order.peso %> kg
                      </span>
                    <% else %>
                      <span class="text-gray-400">Sin pesar</span>
                    <% end %>
                  </td>
                  <td class="p-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case order.status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'scheduled' then 'bg-blue-100 text-blue-800'
                          when 'in_progress' then 'bg-green-100 text-green-800'
                          when 'paused' then 'bg-orange-100 text-orange-800'
                          when 'completed' then 'bg-gray-100 text-gray-800'
                          when 'cancelled' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= order.status.humanize %>
                    </span>
                  </td>
                  <td class="p-4 text-sm text-slate-700">
                    <%= order.fecha_completa&.strftime("%d/%m/%Y") || order.created_at.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="p-4" data-action="click->production-order#stopPropagation">
                    <div class="flex space-x-2">
                      <%= link_to admin_production_order_path(order), 
                          class: "text-blue-600 hover:text-blue-800",
                          title: "Ver detalles" do %>
                        <%= icon('fa-solid', 'eye', class: 'w-4 h-4') %>
                      <% end %>
                      
                      <%= link_to edit_admin_production_order_path(order), 
                          class: "text-yellow-600 hover:text-yellow-800",
                          title: "Editar" do %>
                        <%= icon('fa-solid', 'edit', class: 'w-4 h-4') %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              
              <% if @production_orders.empty? %>
                <tr>
                  <td colspan="9" class="p-8 text-center text-gray-500">
                    No hay órdenes de producción disponibles.
                    <%= link_to 'Crear primera orden', new_admin_production_order_path, 
                        class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @production_orders %>
        
      </div>
    </section>
  </div>
</div>

<!-- Modal for Production Order Details -->
<div class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" 
     data-production-order-target="modal"
     data-controller="production-order">
  <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
    <!-- Modal Header -->
    <div class="flex items-center justify-between pb-4 border-b">
      <h3 class="text-lg font-semibold text-gray-900" data-production-order-target="modalTitle">
        Detalles de Orden de Producción
      </h3>
      <button class="text-gray-400 hover:text-gray-600" 
              data-action="click->production-order#closeModal">
        <%= icon('fa-solid', 'times', class: 'w-5 h-5') %>
      </button>
    </div>
    
    <!-- Modal Content -->
    <div class="pt-4" data-production-order-target="modalContent">
      <!-- Content will be loaded here -->
      <div class="text-center py-4">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto"></div>
        <p class="mt-2 text-gray-600">Cargando datos...</p>
      </div>
    </div>
  </div>
</div>