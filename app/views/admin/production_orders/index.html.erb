<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" style="max-width: calc(100% - 0.75rem); margin-right: 0;" data-responsive-right-margin="true" data-controller="production-order">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Órdenes de Producción
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= form_with url: import_excel_admin_production_orders_path, method: :post, local: true, 
                class: "inline-block mt-12" do |form| %>
              <%= form.submit "Actualizar", 
                  class: "flex items-center gap-3 rounded-lg bg-purple-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85 cursor-pointer",
                  data: { confirm: "¿Estás seguro de que quieres importar los datos desde merged.xlsx?" } %>
            <% end %>
               <% if current_admin %>
                 <%= link_to 'Nueva Orden de Producción', new_admin_production_order_path, 
                     class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
               <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Production Order Status Cards -->
    <div class="px-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @production_orders&.total_count || @production_orders&.count || 0 %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-blue-800">Total Órdenes</p>
            </div>
          </div>
        </div>
        
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @production_orders&.where(status: 'in_progress')&.count || 0 %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">En Progreso</p>
            </div>
          </div>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @production_orders&.where(status: 'pending')&.count || 0 %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-yellow-800">Pendientes</p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-gray-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @production_orders&.where(status: 'completed')&.count || 0 %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-800">Completadas</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="px-4 mb-6">
      <%= render 'shared/table_filters', 
          search_placeholder: 'Buscar por número de orden o producto...',
          filters: [
            {
              name: :warehouse_id,
              type: 'select',
              label: 'Almacén',
              options: Warehouse.all.pluck(:name, :id),
              prompt: 'Todos los almacenes'
            },
            {
              name: :status,
              type: 'select', 
              label: 'Estado',
              options: ProductionOrder::STATUSES.map { |s| [s.humanize, s] },
              prompt: 'Todos los estados'
            },
            {
              name: :priority,
              type: 'select',
              label: 'Prioridad',
              options: ProductionOrder::PRIORITIES.map { |p| [p.humanize, p] },
              prompt: 'Todas las prioridades'
            },
            {
              name: :start_date,
              type: 'date',
              label: 'Fecha desde'
            },
            {
              name: :end_date,
              type: 'date', 
              label: 'Fecha hasta'
            }
          ] %>
    </div>

    <section class="flex flex-col w-full mb-4 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table data-controller="table" 
                 data-table-sortable-value="true"
                 class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th data-sortable="order_number" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">No. OPRO</th>
                <th data-sortable="product" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 hidden sm:table-cell">Producto</th>
                <th data-sortable="lote" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 hidden md:table-cell">Lote</th>
                <th data-sortable="quantity" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Cantidad</th>
                <th data-sortable="carga" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 hidden lg:table-cell">Carga</th>
                <th data-sortable="peso" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 hidden lg:table-cell">Peso</th>
                <th data-sortable="status" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Estado</th>
                <th data-sortable="date" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 hidden md:table-cell">Fecha</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @production_orders.each do |order| %>
                <tr data-table-target="row" class="hover:bg-gray-50 cursor-pointer"
                    data-order-id="<%= order.id %>"
                    data-action="click->production-order#openModal">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <div>
                      <span class="text-blue-600 font-semibold">
                        <%= order.no_opro.present? ? order.no_opro : order.order_number %>
                      </span>
                      <div class="text-xs text-gray-500 sm:hidden mt-1">
                        <%= order.product.name.truncate(30) %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                    <%= order.product.name.truncate(40) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                    <%= order.lote_referencia || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                    <%= order.quantity_requested %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden lg:table-cell">
                    <%= order.carga_copr&.to_f || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden lg:table-cell">
                    <% if order.peso.present? %>
                      <span class="inline-flex items-center px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">
                        <%= order.peso %> kg
                      </span>
                    <% else %>
                      <span class="text-gray-400">Sin pesar</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                      <%= case order.status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'scheduled' then 'bg-blue-100 text-blue-800'
                          when 'in_progress' then 'bg-green-100 text-green-800'
                          when 'paused' then 'bg-orange-100 text-orange-800'
                          when 'completed' then 'bg-gray-100 text-gray-800'
                          when 'cancelled' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= order.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                    <%= order.fecha_completa&.strftime("%d/%m/%Y") || order.created_at.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium" data-action="click->production-order#stopPropagation">
                    <%= link_to 'Ver', admin_production_order_path(order), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <%= link_to 'Editar', edit_admin_production_order_path(order), class: "text-yellow-600 hover:text-yellow-900 mr-3" %>
                  </td>
                </tr>
              <% end %>
              
              <% if @production_orders.empty? %>
                <tr>
                  <td colspan="9" class="p-8 text-center text-gray-500">
                    No hay órdenes de producción disponibles.
                    <%= link_to 'Crear primera orden', new_admin_production_order_path, 
                        class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @production_orders %>
      </div>
    </section>
  </div>
</div>

<!-- Modal for Production Order Details -->
<div class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" 
     data-production-order-target="modal"
     data-controller="production-order">
  <div class="relative top-4 sm:top-20 mx-auto p-3 sm:p-5 border w-full h-full sm:h-auto sm:w-11/12 md:w-3/4 lg:w-1/2 xl:w-2/5 shadow-lg sm:rounded-md bg-white">
    <!-- Modal Header -->
    <div class="flex items-center justify-between pb-3 sm:pb-4 border-b sticky top-0 bg-white z-10">
      <h3 class="text-base sm:text-lg font-semibold text-gray-900" data-production-order-target="modalTitle">
        Detalles de Orden de Producción
      </h3>
      <button class="text-gray-400 hover:text-gray-600 p-2 -mr-2" 
              data-action="click->production-order#closeModal">
        <%= icon('fa-solid', 'times', class: 'w-4 h-4 sm:w-5 sm:h-5') %>
      </button>
    </div>
    
    <!-- Modal Content -->
    <div class="pt-3 sm:pt-4 pb-6 overflow-y-auto max-h-full" data-production-order-target="modalContent">
      <!-- Content will be loaded here -->
      <div class="text-center py-8">
        <div class="animate-spin rounded-full h-6 w-6 sm:h-8 sm:w-8 border-b-2 border-blue-600 mx-auto"></div>
        <p class="mt-2 text-sm sm:text-base text-gray-600">Cargando datos...</p>
      </div>
    </div>
  </div>
</div>

<style>
@media (min-width: 768px) {
  [data-responsive-right-margin="true"] {
    max-width: calc(100% - 0.75rem) !important;
  }
}
@media (max-width: 767px) {
  [data-responsive-right-margin="true"] {
    max-width: 100% !important;
  }
}
</style>
