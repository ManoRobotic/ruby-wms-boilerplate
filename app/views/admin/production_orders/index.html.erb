<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" style="max-width: calc(100% - 0.75rem); margin-right: 0;" data-responsive-right-margin="true" data-controller="production-order">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border lg:px-6 lg:py-8">
      <div class="flex flex-col items-center gap-4 mb-4 md:flex-row md:items-center md:justify-between mt-8">
        <div>
          <h1 class="font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
            Ordenes de Producción
          </h1>
        </div>
        <div class="flex justify-center gap-2 shrink-0 md:w-auto">
          <button onclick="location.reload()" class="btn btn-secondary btn-sm border border-gray-800">
            Actualizar tabla
          </button>
             <% if current_admin %>
               <%= link_to 'Nueva Orden de Producción', new_admin_production_order_path, 
                   class: "btn btn-primary btn-sm border border-gray-800" %>
             <% end %>
        </div>
      </div>
    </div>

    <!-- Production Order Status Cards -->
    <div class="px-4 mb-6">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Total Orders Card -->
        <div class="relative p-5 overflow-hidden border border-gray-800 rounded-lg shadow-sm" style="background-color: var(--color-blue-gem-50);">
          <div class="flex items-start justify-between">
            <div class="flex flex-col">
              <span class="text-sm font-medium text-blue-gem-700">Total Órdenes</span>
              <span class="text-2xl font-bold text-blue-gem-900 sm:text-3xl"><%= @production_orders&.total_count || @production_orders&.count || 0 %></span>
            </div>
            <div class="p-2 text-blue-gem-600 bg-blue-gem-100 rounded-md">
              <%= icon('fa-solid', 'boxes-stacked', class: 'w-5 h-5') %>
            </div>
          </div>
        </div>

        <!-- In Progress Card -->
        <div class="relative p-5 overflow-hidden border border-gray-800 rounded-lg shadow-sm" style="background-color: var(--color-dark-fern-50);">
          <div class="flex items-start justify-between">
            <div class="flex flex-col">
              <span class="text-sm font-medium text-dark-fern-700">En Progreso</span>
              <span class="text-2xl font-bold text-dark-fern-900 sm:text-3xl"><%= @production_orders&.where(status: 'in_progress')&.count || 0 %></span>
            </div>
            <div class="p-2 text-dark-fern-600 bg-dark-fern-100 rounded-md">
              <%= icon('fa-solid', 'cogs', class: 'w-5 h-5') %>
            </div>
          </div>
        </div>

        <!-- Pending Card -->
        <div class="relative p-5 overflow-hidden border border-gray-800 rounded-lg shadow-sm" style="background-color: var(--color-bamboo-50);">
          <div class="flex items-start justify-between">
            <div class="flex flex-col">
              <span class="text-sm font-medium text-bamboo-700">Pendientes</span>
              <span class="text-2xl font-bold text-bamboo-900 sm:text-3xl"><%= @production_orders&.where(status: 'pending')&.count || 0 %></span>
            </div>
            <div class="p-2 text-bamboo-600 bg-bamboo-100 rounded-md">
              <%= icon('fa-solid', 'hourglass-half', class: 'w-5 h-5') %>
            </div>
          </div>
        </div>

        <!-- Completed Card -->
        <div class="relative p-5 overflow-hidden border border-gray-800 rounded-lg shadow-sm" style="background-color: var(--color-mexican-red-50);">
          <div class="flex items-start justify-between">
            <div class="flex flex-col">
              <span class="text-sm font-medium text-mexican-red-700">Completadas</span>
              <span class="text-2xl font-bold text-mexican-red-900 sm:text-3xl"><%= @production_orders&.where(status: 'completed')&.count || 0 %></span>
            </div>
            <div class="p-2 text-mexican-red-600 bg-mexican-red-100 rounded-md">
              <%= icon('fa-solid', 'flag-checkered', class: 'w-5 h-5') %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="px-4 mb-6">
      <div class="p-6 bg-white border shadow-md sm:rounded-lg">
        <%= form_with url: request.path, method: :get, local: true, class: "space-y-4" do |form| %>
          <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
            <!-- Search Field -->
            <div class="md:col-span-2">
              <label for="search" class="block mb-2 text-sm font-medium text-gray-700">Buscar</label>
              <%= form.text_field :search, 
                  id: :search,
                  value: params[:search], 
                  placeholder: 'No. OPRO, producto, lote...',
                  class: "block w-full px-3 py-2 text-base placeholder-gray-400 border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
            </div>
            
            <!-- Start Date -->
            <div>
              <label for="start_date" class="block mb-2 text-sm font-medium text-gray-700">Fecha Inicio</label>
              <%= form.date_field :start_date, 
                  id: :start_date,
                  value: params[:start_date],
                  class: "block w-full px-3 py-2 text-base border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
            </div>
            
            <!-- End Date -->
            <div>
              <label for="end_date" class="block mb-2 text-sm font-medium text-gray-700">Fecha Fin</label>
              <%= form.date_field :end_date, 
                  id: :end_date,
                  value: params[:end_date],
                  class: "block w-full px-3 py-2 text-base border border-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-blue-gem-500 focus:border-blue-gem-500" %>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex justify-end pt-2 space-x-3">
            <%= form.submit "Filtrar", 
                class: "btn btn-primary btn-sm border border-gray-800" %>
            <%= link_to "Limpiar", request.path, 
                class: "btn btn-secondary btn-sm border border-gray-800",
                data: { turbo: false } %>
          </div>
        <% end %>
      </div>
    </div>


    <section class="flex flex-col w-full mb-4">
      <div class="w-full px-4">
        <div class="relative overflow-x-auto border shadow-md sm:rounded-lg">
          <table data-controller="table" 
                 data-table-sortable-value="true"
                 class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase" style="background-color: var(--color-blue-gem-200);">
              <tr>
                <th scope="col" data-sortable="order_number" class="px-4 py-3 cursor-pointer hover:bg-gray-100">No. OPRO</th>
                <th scope="col" data-sortable="cve_prod" class="px-4 py-3 cursor-pointer hover:bg-gray-100">CVE_PROD</th>
                <th scope="col" data-sortable="lote" class="px-4 py-3 hidden cursor-pointer md:table-cell hover:bg-gray-100">Lote</th>
                <th scope="col" data-sortable="quantity" class="px-4 py-3 text-center hidden cursor-pointer sm:table-cell hover:bg-gray-100">Cantidad</th>
                <th scope="col" data-sortable="metros_lineales" class="px-4 py-3 text-center cursor-pointer hover:bg-gray-100">Metros</th>
                <th scope="col" data-sortable="peso_bruto" class="px-4 py-3 text-center cursor-pointer hover:bg-gray-100">P. Bruto</th>
                <th scope="col" data-sortable="peso_neto" class="px-4 py-3 text-center cursor-pointer hover:bg-gray-100">P. Neto</th>
                <th scope="col" class="px-4 py-3 text-center">Impresión</th>
                <th scope="col" data-sortable="date" class="px-4 py-3 text-center hidden cursor-pointer md:table-cell hover:bg-gray-100">Fecha</th>
                <th scope="col" class="px-4 py-3 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @production_orders.each do |order| %>
                <tr data-table-target="row" class="border-b hover:bg-gray-50 cursor-pointer"
                    data-order-id="<%= order.id %>"
                    data-action="click->production-order#openModal">
                  <!-- No. OPRO -->
                  <td class="px-3 py-2 text-sm font-medium text-gray-900">
                    <div>
                      <span class="text-blue-gem-600 font-semibold">
                        <%= order.no_opro.present? ? order.no_opro : order.order_number %>
                      </span>
                      <div class="text-xs text-gray-500 mt-1 space-y-1">
                        <div>
                          <span class="text-gray-400">Lote:</span> <%= order.lote_referencia || '-' %>
                        </div>
                        <div class="flex flex-wrap gap-1 sm:hidden mt-1">
                          <span class="inline-flex items-center px-2 py-0.5 bg-gray-100 text-gray-700 text-xs rounded">
                            <%= order.quantity_requested %> und
                          </span>
                        </div>
                      </div>
                    </div>
                  </td>
                  
                  <!-- CVE_PROD -->
                  <td class="px-3 py-2 text-sm text-gray-500">
                    <% cve_prod = order.clave_producto %>
                    <span class="font-mono text-xs px-2 py-1 rounded font-semibold">
                      <%= cve_prod %>
                    </span>
                  </td>
                  
                  <!-- Lote -->
                  <td class="px-2 py-2 text-sm text-gray-500 hidden md:table-cell">
                    <%= order.lote_referencia || '-' %>
                  </td>
                  
                  <!-- Cantidad -->
                  <td class="px-2 py-2 text-center text-sm text-gray-900 font-medium hidden sm:table-cell">
                    <%= order.quantity_requested %>
                  </td>
                  
                  <!-- Metros -->
                  <td class="px-2 py-2 text-center text-sm text-gray-500">
                    <% total_metros = order.total_meters.to_f %>
                    <% if total_metros > 0 %>
                      <span class="inline-flex items-center px-2 py-1 bg-blue-gem-100 text-blue-gem-900 text-xs font-bold rounded-full">
                        📏 <%= total_metros.round(1) %> m
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  
                  <!-- Peso Bruto -->
                  <td class="px-2 py-2 text-center text-sm text-gray-500">
                    <% total_peso_bruto = order.total_gross_weight.to_f %>
                    <% if total_peso_bruto > 0 %>
                      <span class="inline-flex items-center px-2 py-1 bg-bamboo-100 text-bamboo-900 text-xs font-bold rounded-full">
                        ⚖️ <%= total_peso_bruto.round(1) %> kg
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  
                  <!-- Peso Neto -->
                  <td class="px-2 py-2 text-center text-sm text-gray-500">
                    <% total_peso_neto = order.total_net_weight.to_f %>
                    <% if total_peso_neto > 0 %>
                      <span class="inline-flex items-center px-2 py-1 text-xs font-bold rounded-full text-black" style="background-color: var(--color-dark-fern-400);">
                        ✅ <%= total_peso_neto.round(1) %> kg
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  
                  <!-- Impresión -->
                  <td class="px-2 py-2 text-center">
                    <% 
                      print_summary = order.print_status_summary
                      status_style = if print_summary.include?("Impreso")
                        "background-color: var(--color-dark-fern-100); color: var(--color-dark-fern-800);"
                      elsif print_summary.include?("Parcial")
                        "background-color: var(--color-bamboo-100); color: var(--color-bamboo-800);"
                      else
                        "background-color: var(--color-mexican-red-100); color: var(--color-mexican-red-800);"
                      end
                    %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full" style="<%= status_style %>">
                      <%= print_summary %>
                    </span>
                  </td>
                  
                  <!-- Fecha -->
                  <td class="px-2 py-2 text-center text-sm text-gray-500 hidden md:table-cell">
                    <%= order.fecha_completa&.strftime("%d/%m/%Y") || order.created_at.strftime("%d/%m/%Y") %>
                  </td>
                  
                  <!-- Acciones -->
                  <td class="px-2 py-2 text-center text-sm font-medium" data-action="click->production-order#stopPropagation">
                    <div class="flex items-center justify-center space-x-1">
                        <%= link_to admin_production_order_path(order), class: "btn btn-primary btn-sm btn-icon" do %>
                            <%= icon('fa-solid', 'eye', class: 'w-4 h-4') %>
                        <% end %>
                        <%= link_to edit_admin_production_order_path(order), class: "btn btn-accent btn-sm btn-icon" do %>
                            <%= icon('fa-solid', 'pencil-alt', class: 'w-4 h-4') %>
                        <% end %>
                        <% if current_admin.present? %>
                          <%= button_to admin_production_order_path(order), 
                              method: :delete, 
                              class: "btn btn-danger btn-sm btn-icon",
                              data: { confirm: "¿Estás seguro de que deseas eliminar esta orden de producción?" } do %>
                              <%= icon('fa-solid', 'trash', class: 'w-4 h-4') %>
                          <% end %>
                        <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              
              <% if @production_orders.empty? %>
                <tr>
                  <td colspan="10" class="p-8 text-center text-gray-500">
                    No hay órdenes de producción disponibles.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Pagination -->
        <div class="mt-4">
          <%= render 'shared/table_pagination', collection: @production_orders %>
        </div>
      </div>
    </section>
  </div>
</div>

<!-- Modal for Production Order Details -->
<div class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" 
     data-production-order-target="modal"
     data-controller="production-order">
  <div class="relative top-4 sm:top-20 mx-auto p-3 sm:p-5 border w-full h-full sm:h-auto sm:w-11/12 md:w-3/4 lg:w-1/2 xl:w-2/5 shadow-lg sm:rounded-md bg-white">
    <!-- Modal Header -->
    <div class="flex items-center justify-between pb-3 sm:pb-4 border-b sticky top-0 bg-white z-10">
      <h3 class="text-base sm:text-lg font-semibold text-gray-900" data-production-order-target="modalTitle">
        Detalles de Orden de Producción
      </h3>
      <button class="text-gray-400 hover:text-gray-600 p-2 -mr-2" 
              data-action="click->production-order#closeModal">
        <%= icon('fa-solid', 'times', class: 'w-4 h-4 sm:w-5 sm:h-5') %>
      </button>
    </div>
    
    <!-- Modal Content -->
    <div class="pt-3 sm:pt-4 pb-6 overflow-y-auto max-h-full" data-production-order-target="modalContent">
      <!-- Content will be loaded here -->
      <div class="text-center py-8">
        <div class="animate-spin rounded-full h-6 w-6 sm:h-8 sm:w-8 border-b-2 border-blue-600 mx-auto"></div>
        <p class="mt-2 text-sm sm:text-base text-gray-600">Cargando datos...</p>
      </div>
    </div>
  </div>
</div>

<style>
@media (min-width: 768px) {
  [data-responsive-right-margin="true"] {
    max-width: calc(100% - 0.75rem) !important;
  }
}
@media (max-width: 767px) {
  [data-responsive-right-margin="true"] {
    max-width: 100% !important;
  }
}
</style>