<% if @production_order.errors.any? %>
  <div class="bg-red-50 border border-red-300 rounded-lg p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          Se encontraron los siguientes errores:
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <ul class="list-disc list-inside space-y-1">
            <% @production_order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="w-full px-4 mt-8" data-controller="production-order-form">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-6 text-gray-700 bg-white bg-clip-border">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Nueva Orden de Producción</h1>
        <%= link_to admin_production_orders_path, 
            class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <%= icon('fa-solid', 'arrow-left', class: 'w-4 h-4 mr-2') %>
          Volver
        <% end %>
      </div>

      <%= form_with model: [:admin, @production_order], local: false, class: "space-y-6" do |form| %>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <!-- Warehouse Selection -->
          <div>
            <%= form.label :warehouse_id, "Almacén", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :warehouse_id, 
                options_from_collection_for_select(Warehouse.all, :id, :name, @production_order.warehouse_id),
                { prompt: "Seleccionar almacén" },
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>

          <!-- Product Selection -->
          <div>
            <%= form.label :product_id, "Producto", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :product_id, 
                options_from_collection_for_select(Product.all, :id, :name, @production_order.product_id),
                { prompt: "Seleccionar producto" },
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>

          <!-- Quantity Requested -->
          <div>
            <%= form.label :quantity_requested, "Cantidad Solicitada", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :quantity_requested, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                min: 1, step: 1 %>
          </div>

          <!-- Priority -->
          <div>
            <%= form.label :priority, "Prioridad", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :priority, 
                options_for_select(ProductionOrder::PRIORITIES.map { |p| [p.humanize, p] }, @production_order.priority),
                {},
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>

          <!-- Estimated Completion -->
          <div class="md:col-span-2">
            <%= form.label :estimated_completion, "Fecha Estimada de Finalización", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :estimated_completion, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Printing Format Fields -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 border-t border-gray-200 pt-6">
          <div class="md:col-span-2">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Información de Impresión</h3>
          </div>

          <!-- Bag Size -->
          <div>
            <%= form.label :bag_size, "Bolsa", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :bag_size, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Tipo de bolsa" %>
          </div>

          <!-- Bag Measurement -->
          <div>
            <%= form.label :bag_measurement, "Medida bolsa", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :bag_measurement, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Dimensiones de la bolsa" %>
          </div>

          <!-- Pieces Count -->
          <div>
            <%= form.label :pieces_count, "Número de piezas", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :pieces_count, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                min: 0, step: 1 %>
          </div>

          <!-- Package Count (for box format) -->
          <div>
            <%= form.label :package_count, "Cantidad de paquetes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :package_count, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                min: 0, step: 1 %>
          </div>

          <!-- Package Measurement -->
          <div class="md:col-span-2">
            <%= form.label :package_measurement, "Medida de paquetes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :package_measurement, 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Dimensiones de los paquetes" %>
          </div>
        </div>

        <!-- Notes -->
        <div>
          <%= form.label :notes, "Notas", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :notes, rows: 4,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "Instrucciones especiales, materiales adicionales, etc." %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancelar", admin_production_orders_path, 
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Crear Orden de Producción", 
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
