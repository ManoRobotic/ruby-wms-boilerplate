<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <!-- Header -->
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              <%= t('users.new_user') %>
            </h1>
            <p class="text-sm text-gray-600 mt-2">Crear un nuevo usuario del sistema</p>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Volver', admin_users_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="px-6 py-4">
      <%= form_with model: [:admin, @user], local: true, class: "space-y-6", 
          data: { controller: "user-form" } do |form| %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Basic Information -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900">Información Básica</h3>
            
            <div>
              <%= form.label :name, t('users.name'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :name, 
                  placeholder: "Nombre completo del usuario",
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              <% if @user.errors[:name].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:name].first %></p>
              <% end %>
            </div>

            <div>
              <%= form.label :email, t('users.email'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.email_field :email, 
                  placeholder: "usuario@ejemplo.com",
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              <% if @user.errors[:email].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email].first %></p>
              <% end %>
            </div>

            <div>
              <%= form.label :role, t('users.role'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :role, [
                ['Administrador', 'admin'],
                ['Supervisor', 'supervisor'],
                ['Recolector', 'picker'],
                ['Usuario', 'user']
              ], { prompt: 'Selecciona un rol' }, { 
                required: true,
                data: { 
                  user_form_target: "role",
                  action: "change->user-form#roleChanged"
                },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
              } %>
              <p class="mt-1 text-xs text-gray-500">
                Administrador: Acceso completo | Supervisor: Gestión de almacén | Recolector: Tareas y picking | Usuario: Solo lectura
              </p>
              <% if @user.errors[:role].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:role].first %></p>
              <% end %>
            </div>
          </div>

          <!-- Warehouse Assignment -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900">Asignación de Almacén</h3>
            
            <div>
              <%= form.label :warehouse_id, t('users.warehouse'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :warehouse_id, 
                  options_from_collection_for_select(@warehouses, :id, :name), 
                  { prompt: 'Selecciona un almacén' }, 
                  { 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                    data: { 
                      user_form_target: "warehouse",
                      action: "change->user-form#warehouseChanged"
                    }
                  } %>
              <p class="mt-1 text-xs text-gray-500">
                Los administradores pueden acceder a todos los almacenes. Otros roles necesitan un almacén asignado.
              </p>
              <div class="hidden mt-1 text-sm text-red-600" data-user-form-target="warehouseError">
                Este rol requiere seleccionar un almacén.
              </div>
              <% if @user.errors[:warehouse_id].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:warehouse_id].first %></p>
              <% end %>
            </div>

            <div>
              <%= form.label :active, t('users.active'), class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="flex items-center">
                <%= form.check_box :active, { checked: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" } %>
                <span class="ml-2 text-sm text-gray-700">Usuario activo (puede iniciar sesión)</span>
              </div>
              <% if @user.errors[:active].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:active].first %></p>
              <% end %>
            </div>

            <!-- Password Information -->
            <div class="bg-blue-50 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800">Contraseña Temporal</h3>
                  <div class="mt-2 text-sm text-blue-700">
                    <p>Se generará automáticamente una contraseña temporal de 8 caracteres.</p>
                    <p class="mt-1">El usuario deberá cambiar su contraseña en el primer inicio de sesión.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex items-center justify-end gap-4 pt-6 border-t">
          <%= link_to "Cancelar", admin_users_path, 
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Crear Usuario", 
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>