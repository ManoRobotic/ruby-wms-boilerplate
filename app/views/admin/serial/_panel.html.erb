<div class="serial-panel" 
     data-controller="serial" 
     data-serial-base-url-value="/api/serial"
     data-serial-auto-connect-value="true"
     data-serial-poll-interval-value="2000">
  
  <div class="card">
    <div class="card-header">
      <h3 class="text-lg font-semibold">Comunicación Serial</h3>
    </div>
    
    <div class="card-body space-y-4">
      <!-- Status -->
      <div class="status-section">
        <div class="flex items-center justify-between">
          <span class="font-medium">Estado:</span>
          <span data-serial-target="status" class="status info">Iniciando...</span>
        </div>
      </div>

      <!-- Scale Section -->
      <div class="scale-section">
        <h4 class="font-medium text-gray-700 mb-2">Báscula</h4>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="serial_port" class="block text-sm font-medium text-gray-700 mb-1">Puerto</label>
            <select data-serial-target="port" id="serial_port" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-md">
              <option value="">Detectando puertos...</option>
            </select>
          </div>
          
          <div class="flex items-end space-x-2">
            <button data-action="click->serial#connectScale" 
                    class="btn btn-primary">
              Conectar
            </button>
            <button data-action="click->serial#disconnectScale" 
                    class="btn btn-secondary">
              Desconectar
            </button>
          </div>
        </div>

        <!-- Weight Display -->
        <div class="weight-section mt-4 p-4 bg-gray-50 rounded-lg">
          <div class="flex items-center justify-between">
            <span class="font-medium">Peso actual:</span>
            <button data-action="click->serial#readWeightNow" 
                    class="btn btn-sm btn-outline">
              Leer ahora
            </button>
          </div>
          <div data-serial-target="weight" class="weight-display mt-2">
            <div class="text-2xl font-bold text-center text-gray-400">--</div>
            <div class="text-sm text-center text-gray-500">--</div>
          </div>
        </div>
      </div>

      <!-- Printer Section -->
      <div class="printer-section">
        <h4 class="font-medium text-gray-700 mb-2">Impresora</h4>
        
        <div class="flex items-center justify-between mb-2">
          <span class="font-medium">Estado:</span>
          <span data-serial-target="printerStatus" class="printer-status info">Desconectada</span>
        </div>
        
        <div class="grid grid-cols-3 gap-2">
          <button data-action="click->serial#connectPrinter" 
                  class="btn btn-primary">
            Conectar
          </button>
          <button data-action="click->serial#testPrinter" 
                  data-ancho="80"
                  data-alto="50"
                  class="btn btn-secondary">
            Test TSC
          </button>
          <button data-action="click->serial#printLabel" 
                  data-content="Etiqueta de prueba"
                  data-ancho="80"
                  data-alto="50"
                  class="btn btn-outline">
            Imprimir
          </button>
        </div>
      </div>

      <!-- Logs -->
      <div class="logs-section">
        <div class="flex items-center justify-between mb-2">
          <h4 class="font-medium text-gray-700">Registro</h4>
          <button data-action="click->serial#clearLogs" 
                  class="btn btn-sm btn-outline">
            Limpiar
          </button>
        </div>
        <div data-serial-target="logs" 
             class="logs-container h-32 overflow-y-auto p-3 bg-black text-green-400 text-xs font-mono rounded border">
        </div>
      </div>
    </div>
  </div>
</div>

