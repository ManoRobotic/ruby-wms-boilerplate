<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" style="max-width: calc(100% - 0.75rem); margin-right: 0;" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Códigos de Inventario
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <button onclick="location.reload()" class="mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85 cursor-pointer">
              Actualizar tabla
            </button>
            <% if current_admin %>
              <%= link_to 'Importar Excel', import_excel_admin_inventory_codes_path, 
                  method: :post,
                  class: "mt-12 flex items-center gap-3 rounded-lg bg-green-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
              <%= link_to 'Nuevo Código', new_admin_inventory_code_path, 
                  class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Inventory Codes Status Cards -->
    <div class="px-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @total_count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-blue-800">Total Códigos</p>
            </div>
          </div>
        </div>
        
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @active_count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">Activos</p>
            </div>
          </div>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @inactive_count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-yellow-800">Inactivos</p>
            </div>
          </div>
        </div>
        
        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @unique_products_count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-purple-800">Productos Únicos</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="px-4 mb-6">
      <%= render 'shared/table_filters', 
          search_placeholder: 'Buscar por No. Orden, producto, componente o lote...',
          filters: [
            { name: :no_ordp, type: 'text', placeholder: 'No. Orden (SINSIN...)' },
            { name: :cve_prod, type: 'text', placeholder: 'Cód. Producto (PROMAT...)' },
            { name: :cve_copr, type: 'text', placeholder: 'Cód. Componente (MAT1...)' },
            { name: :lote, type: 'text', placeholder: 'Lote' },
            { name: :start_date, type: 'date' },
            { name: :end_date, type: 'date' }
          ] %>
    </div>

    <!-- Table Section -->
    <div class="p-4 overflow-x-auto flex-1">
      <% if @inventory_codes.any? %>
        <table class="w-full min-w-max table-auto text-left">
          <thead>
            <tr class="bg-gray-50">
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  No. Orden
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Código Producto
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Componente
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Cantidad
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Costo
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Lote
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Fecha
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Estado
                </p>
              </th>
              <th class="border-b border-gray-200 p-4">
                <p class="block font-sans text-sm font-medium leading-none text-gray-900">
                  Acciones
                </p>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @inventory_codes.each do |code| %>
              <tr class="hover:bg-gray-50">
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm font-semibold text-gray-900">
                    <%= code.no_ordp %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= code.cve_prod %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= truncate(code.cve_copr, length: 30) %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= code.formatted_quantity %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= code.formatted_cost %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= code.lote %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <p class="block font-sans text-sm text-gray-700">
                    <%= code.fech_cto&.strftime("%d/%m/%Y") || "N/A" %>
                  </p>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <% case code.tip_copr %>
                  <% when 1 %>
                    <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                      Activo
                    </span>
                  <% when 0 %>
                    <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                      Inactivo
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
                      N/A
                    </span>
                  <% end %>
                </td>
                <td class="p-4 border-b border-gray-200">
                  <div class="flex gap-2">
                    <%= link_to admin_inventory_code_path(code), 
                        class: "text-blue-600 hover:text-blue-800" do %>
                      Ver
                    <% end %>
                    <%= link_to edit_admin_inventory_code_path(code), 
                        class: "text-yellow-600 hover:text-yellow-800" do %>
                      Editar
                    <% end %>
                    <%= link_to admin_inventory_code_path(code), 
                        method: :delete,
                        confirm: "¿Está seguro de eliminar este código?",
                        class: "text-red-600 hover:text-red-800" do %>
                      Eliminar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @inventory_codes %>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500 text-lg">No se encontraron códigos de inventario.</p>
          <%= link_to 'Crear el primer código', new_admin_inventory_code_path, 
              class: "mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>