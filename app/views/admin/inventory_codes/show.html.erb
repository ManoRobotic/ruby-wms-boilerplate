<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class=" mt-8 relative p-4 text-gray-700 bg-white bg-clip-border flex flex-col flex-grow">
      
      <!-- Header -->
      <div class="relative flex flex-col gap-3 mb-4 lg:flex-row lg:items-start lg:justify-between">
        <div class="flex-1">
          <h1 class="text-lg font-semibold text-gray-900 mb-1">
            Código de Inventario: <%= @inventory_code.no_ordp %>
          </h1>
          <p class="text-sm text-gray-600">
            Producto: <%= @inventory_code.cve_prod %>
          </p>
          <p class="text-xs text-gray-500">
            <%= @inventory_code.fech_cto&.strftime("%d/%m/%Y") || @inventory_code.created_at.strftime("%d/%m/%Y a las %H:%M") %>
          </p>
        </div>
        
        <div class="flex gap-2 shrink-0 lg:absolute lg:top-0 lg:right-0 lg:z-10">
          <%= link_to admin_inventory_codes_path, 
              class: "px-3 py-1.5 text-xs font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 flex items-center gap-1" do %>
            <%= icon('fa-solid', 'arrow-left', class: 'w-3 h-3') %>
            Volver
          <% end %>
          
          <%= link_to edit_admin_inventory_code_path(@inventory_code), 
              class: "px-3 py-1.5 text-xs font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 flex items-center gap-1" do %>
            <%= icon('fa-solid', 'edit', class: 'w-3 h-3') %>
            Editar
          <% end %>
        </div>
      </div>

      <!-- Status Display -->
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 mb-4">
        <div class="flex items-center gap-2">
          <span class="text-xs text-gray-500">Estado:</span>
          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
            <%= @inventory_code.tip_copr == 1 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @inventory_code.status_display %>
          </span>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 flex-grow min-h-0">
        
        <!-- Basic Information -->
        <div class="bg-slate-50 rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300 flex flex-col">
          <h3 class="text-base font-semibold text-slate-900 mb-4">Información Básica</h3>
          
          <div class="space-y-3 text-sm flex-grow">
            <div class="flex justify-between">
              <span class="text-slate-500">No. Orden:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.no_ordp %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Código Producto:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.cve_prod %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Código Componente:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.cve_copr %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Lote:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.lote %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Fecha:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.fech_cto&.strftime("%d/%m/%Y") || "N/A" %></span>
            </div>
          </div>
        </div>

        <!-- Quantities and Costs -->
        <div class="bg-slate-50 rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300 flex flex-col">
          <h3 class="text-base font-semibold text-slate-900 mb-4">Cantidades y Costos</h3>
          
          <div class="space-y-3 text-sm flex-grow">
            <div class="flex justify-between">
              <span class="text-slate-500">Cantidad:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.formatted_quantity %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Costo:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.formatted_cost %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Costo Reposición:</span>
              <span class="text-slate-900 font-medium">
                <%= @inventory_code.costo_rep.present? ? "$#{@inventory_code.costo_rep.round(2)}" : "N/A" %>
              </span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Unidad:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.undres || "N/A" %></span>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <div class="bg-slate-50 rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300 flex flex-col">
          <h3 class="text-base font-semibold text-slate-900 mb-4">Información Adicional</h3>
          
          <div class="space-y-3 text-sm flex-grow">
            <div class="flex justify-between">
              <span class="text-slate-500">Sucursal:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.cve_suc %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Trans:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.trans %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Nueva Medida:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.new_med %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Nuevo Comp:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.new_copr %></span>
            </div>
          </div>
        </div>

        <!-- Technical Details -->
        <div class="bg-slate-50 rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300 flex flex-col">
          <h3 class="text-base font-semibold text-slate-900 mb-4">Detalles Técnicos</h3>
          
          <div class="space-y-3 text-sm flex-grow">
            <div class="flex justify-between">
              <span class="text-slate-500">Part Resp:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.partresp %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">D Mov:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.dmov %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">Part Op:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.partop %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-500">FCD Res:</span>
              <span class="text-slate-900 font-medium"><%= @inventory_code.fcdres %></span>
            </div>
          </div>
        </div>

        <!-- Timeline -->
        <div class="bg-amber-50 rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300 flex flex-col">
          <h3 class="text-base font-semibold text-amber-900 mb-4">Registro</h3>
          
          <div class="space-y-3 text-sm flex-grow">
            <div>
              <span class="text-amber-600">Creado:</span>
              <span class="text-amber-900 font-medium block"><%= @inventory_code.created_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
            
            <div>
              <span class="text-amber-600">Actualizado:</span>
              <span class="text-amber-900 font-medium block"><%= @inventory_code.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>