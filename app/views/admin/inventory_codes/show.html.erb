<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Código de Inventario: <%= @inventory_code.no_ordp %>
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Editar', edit_admin_inventory_code_path(@inventory_code), 
                class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
            <%= link_to 'Volver', admin_inventory_codes_path, 
                class: "mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Básica</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">No. Orden:</span>
              <span class="text-gray-900"><%= @inventory_code.no_ordp %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Código Producto:</span>
              <span class="text-gray-900"><%= @inventory_code.cve_prod %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Código Componente:</span>
              <span class="text-gray-900"><%= @inventory_code.cve_copr %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Lote:</span>
              <span class="text-gray-900"><%= @inventory_code.lote %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Fecha:</span>
              <span class="text-gray-900"><%= @inventory_code.fech_cto&.strftime("%d/%m/%Y") || "N/A" %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Estado:</span>
              <span class="<%= @inventory_code.tip_copr == 1 ? 'text-green-600' : 'text-red-600' %>">
                <%= @inventory_code.status_display %>
              </span>
            </div>
          </div>
        </div>

        <!-- Quantities and Costs -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Cantidades y Costos</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Cantidad:</span>
              <span class="text-gray-900"><%= @inventory_code.formatted_quantity %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Costo:</span>
              <span class="text-gray-900"><%= @inventory_code.formatted_cost %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Costo Reposición:</span>
              <span class="text-gray-900">
                <%= @inventory_code.costo_rep.present? ? "$#{@inventory_code.costo_rep.round(2)}" : "N/A" %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Unidad:</span>
              <span class="text-gray-900"><%= @inventory_code.undres || "N/A" %></span>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Adicional</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Sucursal:</span>
              <span class="text-gray-900"><%= @inventory_code.cve_suc %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Trans:</span>
              <span class="text-gray-900"><%= @inventory_code.trans %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Nueva Medida:</span>
              <span class="text-gray-900"><%= @inventory_code.new_med %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Nuevo Comp:</span>
              <span class="text-gray-900"><%= @inventory_code.new_copr %></span>
            </div>
          </div>
        </div>

        <!-- Technical Details -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Detalles Técnicos</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Part Resp:</span>
              <span class="text-gray-900"><%= @inventory_code.partresp %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">D Mov:</span>
              <span class="text-gray-900"><%= @inventory_code.dmov %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Part Op:</span>
              <span class="text-gray-900"><%= @inventory_code.partop %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">FCD Res:</span>
              <span class="text-gray-900"><%= @inventory_code.fcdres %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Timeline -->
      <div class="mt-6 bg-white border rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Registro</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-600">
            <strong>Creado:</strong> <%= @inventory_code.created_at.strftime("%d/%m/%Y %H:%M") %>
          </p>
          <p class="text-sm text-gray-600">
            <strong>Actualizado:</strong> <%= @inventory_code.updated_at.strftime("%d/%m/%Y %H:%M") %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>