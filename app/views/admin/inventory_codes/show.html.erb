<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="mt-8 relative p-4 text-gray-700 bg-white bg-clip-border flex flex-col flex-grow">
      
      <!-- Header -->
      <div class="relative flex flex-col gap-3 mb-8 lg:flex-row lg:items-start lg:justify-between">
        <div class="flex-1">
          <h1 class="text-2xl font-bold text-gray-900 mb-1">
            Código de Inventario: <span class="text-blue-gem-600"><%= @inventory_code.no_ordp %></span>
          </h1>
          <p class="text-base text-gray-600">
            Producto: <span class="font-semibold"><%= @inventory_code.cve_prod %></span>
          </p>
          <p class="text-sm text-gray-500">
            <%= @inventory_code.fech_cto&.strftime("%d/%m/%Y") || @inventory_code.created_at.strftime("%d/%m/%Y a las %H:%M") %>
          </p>
        </div>
        
        <div class="flex gap-2 shrink-0">
          <%= link_to admin_inventory_codes_path, class: "btn btn-secondary btn-sm btn-icon" do %>
            <%= icon('fa-solid', 'arrow-left', class: 'w-3 h-3') %>
            <span class="hidden sm:inline">Volver</span>
          <% end %>
          <%= link_to edit_admin_inventory_code_path(@inventory_code), class: "btn btn-primary btn-sm btn-icon" do %>
            <%= icon('fa-solid', 'edit', class: 'w-3 h-3') %>
            <span class="hidden sm:inline">Editar</span>
          <% end %>
        </div>
      </div>

      <!-- Status Display -->
      <div class="mb-6">
        <span class="text-sm text-gray-500">Estado:</span>
        <% status_style = @inventory_code.tip_copr == 1 ? "background-color: var(--color-dark-fern-100); color: var(--color-dark-fern-800);" : "background-color: var(--color-mexican-red-100); color: var(--color-mexican-red-800);" %>
        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full" style="<%= status_style %>">
          <%= @inventory_code.status_display %>
        </span>
      </div>

      <!-- Unified Information Box -->
      <div class="border shadow-md sm:rounded-lg p-6 bg-white">
        <h3 class="text-lg font-semibold text-gray-800 mb-6 pb-2 border-b border-gray-100">Detalles del Código de Inventario</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Basic Information -->
          <div class="space-y-4">
            <h4 class="font-medium text-gray-700 text-sm uppercase tracking-wider">Información Básica</h4>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">No. Orden:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.no_ordp %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Código Producto:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.cve_prod %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Código Componente:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.cve_copr %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Lote:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.lote %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Fecha:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.fech_cto&.strftime("%d/%m/%Y") || "N/A" %></span>
              </div>
            </div>
          </div>

          <!-- Quantities and Costs -->
          <div class="space-y-4">
            <h4 class="font-medium text-gray-700 text-sm uppercase tracking-wider">Cantidades y Costos</h4>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Cantidad:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.formatted_quantity %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Costo:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.formatted_cost %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Costo Reposición:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.costo_rep.present? ? "$#{@inventory_code.costo_rep.round(2)}" : "N/A" %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Unidad:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.undres || "N/A" %></span>
              </div>
            </div>
          </div>

          <!-- Additional Information -->
          <div class="space-y-4">
            <h4 class="font-medium text-gray-700 text-sm uppercase tracking-wider">Información Adicional</h4>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Sucursal:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.cve_suc %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Trans:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.trans %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Nueva Medida:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.new_med %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Nuevo Comp:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.new_copr %></span>
              </div>
            </div>
          </div>

          <!-- Technical Details -->
          <div class="space-y-4">
            <h4 class="font-medium text-gray-700 text-sm uppercase tracking-wider">Detalles Técnicos</h4>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Part Resp:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.partresp %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">D Mov:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.dmov %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">Part Op:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.partop %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500 text-sm">FCD Res:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.fcdres %></span>
              </div>
            </div>
          </div>

          <!-- Timeline -->
          <div class="space-y-4 md:col-span-2 pt-2">
            <h4 class="font-medium text-gray-700 text-sm uppercase tracking-wider">Registro</h4>
            <div class="flex flex-col sm:flex-row justify-between gap-4 bg-gray-50 p-4 rounded-lg">
              <div class="flex justify-between sm:justify-start sm:gap-6">
                <span class="text-gray-500 text-sm">Creado:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.created_at.strftime("%d/%m/%Y %H:%M") %></span>
              </div>
              <div class="flex justify-between sm:justify-start sm:gap-6">
                <span class="text-gray-500 text-sm">Actualizado:</span>
                <span class="font-medium text-gray-800"><%= @inventory_code.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
