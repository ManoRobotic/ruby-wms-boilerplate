<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Almacén: <%= @warehouse.name %>
            </h1>
            <p class="text-sm text-gray-600 mt-2">Código: <%= @warehouse.code %></p>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Editar', edit_admin_warehouse_path(@warehouse), class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
            <% 
            # Check if warehouse can be deleted - only count ACTIVE dependencies
            zones_count = @warehouse.zones.count
            active_orders_count = @warehouse.orders.where.not(status: ['cancelled', 'delivered'])
                                                    .where.not(fulfillment_status: ['cancelled', 'delivered']).count
            active_tasks_count = @warehouse.tasks.where.not(status: ['completed', 'cancelled']).count rescue 0
            active_pick_lists_count = @warehouse.pick_lists.where(status: ['pending', 'assigned', 'in_progress']).count
            active_waves_count = @warehouse.waves.where.not(status: ['completed', 'cancelled']).count rescue 0
            active_receipts_count = @warehouse.receipts.where.not(status: ['completed', 'cancelled']).count rescue 0
            active_shipments_count = @warehouse.shipments.where.not(status: ['cancelled', 'delivered']).count rescue 0
            
            blocking_items = []
            blocking_items << "#{zones_count} zona(s)" if zones_count > 0
            blocking_items << "#{active_orders_count} orden(es) activa(s)" if active_orders_count > 0
            blocking_items << "#{active_tasks_count} tarea(s) activa(s)" if active_tasks_count > 0
            blocking_items << "#{active_pick_lists_count} lista(s) de picking activa(s)" if active_pick_lists_count > 0
            blocking_items << "#{active_waves_count} wave(s) activa(s)" if active_waves_count > 0
            blocking_items << "#{active_receipts_count} recepción(es) activa(s)" if active_receipts_count > 0
            blocking_items << "#{active_shipments_count} envío(s) activo(s)" if active_shipments_count > 0
            
            can_delete = blocking_items.empty?
            %>
            
            <% if can_delete %>
              <%= button_to 'Eliminar', admin_warehouse_path(@warehouse), 
                  method: :delete,
                  data: { 
                    controller: "confirm",
                    action: "click->confirm#confirm",
                    confirm_message_value: "¿Estás seguro de eliminar el almacén #{@warehouse.name}? Esta acción no se puede deshacer.",
                    confirm_title_value: "Eliminar Almacén"
                  }, 
                  class: "mt-12 flex items-center gap-3 rounded-lg bg-red-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg hover:bg-red-600 focus:opacity-85 active:opacity-85 border-none cursor-pointer",
                  form_class: "inline" %>
            <% else %>
              <div class="mt-12 flex items-center gap-3 rounded-lg bg-gray-400 py-2 px-4 text-white font-bold shadow-md cursor-not-allowed" 
                   title="No se puede eliminar porque tiene: <%= blocking_items.join(', ') %>">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                No se puede eliminar
              </div>
            <% end %>
            <%= link_to 'Volver', admin_warehouses_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-8 bg-gray-50">
      <div class="container mx-auto px-4">
        <!-- Información General -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <!-- Detalles del Almacén -->
          <div class="lg:col-span-2 bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Información del Almacén</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-500">Nombre</label>
                <p class="mt-1 text-sm text-gray-900"><%= @warehouse.name %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Código</label>
                <p class="mt-1 text-sm text-gray-900"><%= @warehouse.code %></p>
              </div>
              
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-500">Dirección</label>
                <p class="mt-1 text-sm text-gray-900"><%= @warehouse.address %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Estado</label>
                <p class="mt-1">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @warehouse.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= @warehouse.active? ? 'Activo' : 'Inactivo' %>
                  </span>
                </p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Utilización</label>
                <p class="mt-1 text-sm text-gray-900"><%= @utilization %>%</p>
              </div>
            </div>

            <!-- Información de Contacto -->
            <div class="mt-6">
              <label class="block text-sm font-medium text-gray-500 mb-2">Información de Contacto</label>
              <div class="bg-gray-50 rounded-md p-4">
                <% if @warehouse.contact_info.present? %>
                  <% @warehouse.contact_info.each do |key, value| %>
                    <% if value.present? %>
                      <div class="flex justify-between py-1">
                        <span class="text-sm font-medium text-gray-600"><%= key.humanize %>:</span>
                        <span class="text-sm text-gray-900"><%= value %></span>
                      </div>
                    <% end %>
                  <% end %>
                <% else %>
                  <p class="text-sm text-gray-500 italic">Sin información de contacto</p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Estadísticas -->
          <div class="space-y-6">
            <!-- Métricas Rápidas -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Estadísticas</h3>
              
              <div class="space-y-4">
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-600">Zonas</span>
                  <span class="text-2xl font-bold text-blue-600"><%= @zones_count %></span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-600">Ubicaciones</span>
                  <span class="text-2xl font-bold text-green-600"><%= @locations_count %></span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-600">Tareas Activas</span>
                  <span class="text-2xl font-bold text-orange-600"><%= @active_tasks %></span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-600">Listas de Pick Pendientes</span>
                  <span class="text-2xl font-bold text-purple-600"><%= @pending_pick_lists %></span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-600">Waves Activas</span>
                  <span class="text-2xl font-bold text-indigo-600"><%= @warehouse.waves.active.count %></span>
                </div>
              </div>
            </div>

            <!-- Utilización -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Utilización del Almacén</h3>
              
              <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">
                      Capacidad Utilizada
                    </span>
                  </div>
                  <div class="text-right">
                    <span class="text-xs font-semibold inline-block text-blue-600">
                      <%= @utilization %>%
                    </span>
                  </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
                  <div style="width:<%= @utilization %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Acciones Rápidas</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <%= link_to admin_warehouse_zones_path(@warehouse), class: "flex items-center justify-center px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              Ver Zonas
            <% end %>
            
            <%= link_to new_admin_warehouse_zone_path(@warehouse), class: "flex items-center justify-center px-4 py-3 border border-transparent rounded-md shadow-sm bg-blue-600 text-sm font-medium text-white hover:bg-blue-700" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Nueva Zona
            <% end %>
            
            <%= link_to admin_receipts_path(warehouse_id: @warehouse.id), class: "flex items-center justify-center px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Ver Recepciones
            <% end %>
            
            <%= link_to admin_shipments_path(warehouse_id: @warehouse.id), class: "flex items-center justify-center px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              Ver Envíos
            <% end %>
            
            <%= link_to admin_warehouse_waves_path(@warehouse), class: "flex items-center justify-center px-4 py-3 border border-transparent rounded-md shadow-sm bg-purple-600 text-sm font-medium text-white hover:bg-purple-700" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Wave Management
            <% end %>
          </div>
        </div>

        <!-- Dependencies Check -->
        <div class="mt-6 bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Estado de Eliminación</h3>
          
          <% 
          # Check dependencies for deletion - only count ACTIVE ones
          dependencies = [
            { name: "Zonas", count: @warehouse.zones.count, link: admin_warehouse_zones_path(@warehouse) },
            { name: "Órdenes activas", count: @warehouse.orders.where.not(status: ['cancelled', 'delivered']).where.not(fulfillment_status: ['cancelled', 'delivered']).count, link: admin_orders_path(warehouse_id: @warehouse.id) },
            { name: "Tareas activas", count: (@warehouse.tasks.where.not(status: ['completed', 'cancelled']).count rescue 0), link: admin_tasks_path(warehouse_id: @warehouse.id) },
            { name: "Listas de Picking activas", count: @warehouse.pick_lists.where(status: ['pending', 'assigned', 'in_progress']).count, link: admin_pick_lists_path(warehouse_id: @warehouse.id) },
            { name: "Waves activas", count: (@warehouse.waves.where.not(status: ['completed', 'cancelled']).count rescue 0), link: admin_warehouse_waves_path(@warehouse) },
            { name: "Recepciones activas", count: (@warehouse.receipts.where.not(status: ['completed', 'cancelled']).count rescue 0), link: admin_receipts_path(warehouse_id: @warehouse.id) },
            { name: "Envíos activos", count: (@warehouse.shipments.where.not(status: ['cancelled', 'delivered']).count rescue 0), link: admin_shipments_path(warehouse_id: @warehouse.id) }
          ]
          
          blocking_deps = dependencies.select { |dep| dep[:count] > 0 }
          %>
          
          <% if blocking_deps.any? %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800">No se puede eliminar este almacén</h3>
                  <div class="mt-2 text-sm text-yellow-700">
                    <p>Este almacén tiene elementos asociados que deben eliminarse primero:</p>
                    <ul class="list-disc list-inside mt-2 space-y-1">
                      <% blocking_deps.each do |dep| %>
                        <li>
                          <strong><%= dep[:count] %></strong> <%= dep[:name].downcase %>
                          <% if dep[:link] %>
                            - <%= link_to "Ver", dep[:link], class: "text-yellow-600 hover:text-yellow-500 underline" %>
                          <% end %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-green-800">Listo para eliminar</h3>
                  <div class="mt-2 text-sm text-green-700">
                    <p>Este almacén no tiene elementos asociados y puede eliminarse de forma segura.</p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Fechas -->
        <div class="mt-6 bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información del Sistema</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
            <div>
              <span class="font-medium">Creado:</span> <%= @warehouse.created_at.strftime("%d/%m/%Y %H:%M") %>
            </div>
            <div>
              <span class="font-medium">Última actualización:</span> <%= @warehouse.updated_at.strftime("%d/%m/%Y %H:%M") %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>