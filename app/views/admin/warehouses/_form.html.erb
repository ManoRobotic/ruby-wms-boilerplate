<%= form_with(model: [:admin, warehouse], local: true, class: "space-y-6") do |form| %>
  <% if warehouse.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 rounded-md p-4">
      <h2 class="text-red-800 font-medium mb-2">
        <%= pluralize(warehouse.errors.count, "error") %> prohibited this warehouse from being saved:
      </h2>
      <ul class="text-red-700 text-sm list-disc list-inside">
        <% warehouse.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="field">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="field">
      <%= form.label :code, "Código", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :code, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :address, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="field">
      <%= form.label :contact_info, "Información de Contacto (JSON)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :contact_info, rows: 4, 
          value: warehouse.contact_info.is_a?(Hash) ? warehouse.contact_info.to_json : warehouse.contact_info,
          placeholder: '{"phone": "123-456-7890", "email": "warehouse@example.com", "manager": "Juan Pérez", "hours": "8:00-17:00"}',
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" %>
      <p class="text-xs text-gray-500 mt-1">
        Formato JSON. Dejar vacío para valores por defecto. Ejemplo mostrado arriba.
      </p>
    </div>

    <div class="field">
      <%= form.label :active, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="mt-2">
        <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :active, "Almacén activo", class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to 'Cancelar', admin_warehouses_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>