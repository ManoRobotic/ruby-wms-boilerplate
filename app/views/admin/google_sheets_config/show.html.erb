              <% end %>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-green-600">√ìrdenes Sincronizadas:</span>
              <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full"><%= @admin.total_orders_synced || 0 %></span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-green-600">√ìrdenes Pendientes de Actualizar:</span>
              <% pending_updates = ProductionOrder.where(admin_id: @admin.id, needs_update_to_sheet: true).count %>
