<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8 mb-8">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Inventario
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Nuevo Stock', new_admin_product_stock_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Stock Status Cards -->
    <div class="px-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @admin_stocks.count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-blue-800">Total Items</p>
            </div>
          </div>
        </div>
        
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @admin_stocks.sum(:amount) %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">Unidades Totales</p>
            </div>
          </div>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @admin_stocks.where('amount < 10').count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-yellow-800">Stock Bajo</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table data-controller="table" 
                 data-table-sortable-value="true"
                 class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th data-sortable="product" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Producto</th>
                <th data-sortable="amount" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Cantidad</th>
                <th data-sortable="date" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Fecha Actualización</th>
                <th data-sortable="status" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Estado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @admin_stocks.each do |admin_stock| %>
                <tr data-table-target="row" class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= admin_stock.product&.name || 'Producto eliminado' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <span class="<%= admin_stock.amount < 10 ? 'text-red-600 font-semibold' : 'text-green-600' %>">
                      <%= admin_stock.amount %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= admin_stock.updated_at.strftime('%d/%m/%Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_class = admin_stock.amount < 5 ? 'bg-red-100 text-red-800' : admin_stock.amount < 10 ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= admin_stock.amount < 5 ? 'Crítico' : admin_stock.amount < 10 ? 'Bajo' : 'Normal' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to 'Ver', admin_product_stock_path(admin_stock.product_id, admin_stock.id), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <%= link_to 'Editar', edit_admin_product_stock_path(admin_stock.product_id, admin_stock.id), class: "text-yellow-600 hover:text-yellow-900 mr-3" %>
                    <%= link_to 'Eliminar', admin_product_stock_path(admin_stock.product_id, admin_stock.id), method: :delete, 
                        data: { 
                          controller: "confirm",
                          action: "click->confirm#confirm",
                          confirm_message_value: "¿Estás seguro de que deseas eliminar este stock?",
                          confirm_title_value: "Eliminar Stock"
                        }, 
                        class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</div>
