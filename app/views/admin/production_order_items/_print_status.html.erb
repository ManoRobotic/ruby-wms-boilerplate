<td id="production_order_item_<%= item.id %>_print_status" class="px-3 py-2 text-center">
  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
    <%= case item.print_status
        when 'pending_printing' then 'bg-yellow-100 text-yellow-800'
        when 'printed' then 'bg-blue-100 text-blue-800'
        end %>">
    <%= item.print_status.humanize %>
  </span>
</td>