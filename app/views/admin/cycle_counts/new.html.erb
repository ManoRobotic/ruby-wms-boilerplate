<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Nuevo Conteo Cíclico
            </h1>
          </div>
        </div>
      </div>
    </div>

    <div class="p-6">
      <%= form_with(model: [:admin, @cycle_count], local: true, class: "space-y-6") do |form| %>
        <% if @cycle_count.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@cycle_count.errors.count, "error") %> prevented this cycle count from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @cycle_count.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :warehouse_id, "Almacén", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :warehouse_id, options_from_collection_for_select(@warehouses, :id, :name, @cycle_count.warehouse_id), { prompt: 'Selecciona un almacén' }, { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :count_type, "Tipo de Conteo", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :count_type, options_for_select([
              ['Completo', 'full_count'],
              ['Puntual', 'spot_count'],
              ['ABC', 'abc_count']
            ], @cycle_count.count_type), { prompt: 'Selecciona un tipo' }, { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :location_id, "Ubicación", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :location_id, options_from_collection_for_select(@locations, :id, :coordinate_code, @cycle_count.location_id), { prompt: 'Selecciona una ubicación' }, { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :status, "Estado", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status, options_for_select([
              ['Programado', 'scheduled'],
              ['En Progreso', 'in_progress'],
              ['Completado', 'completed'],
              ['Cancelado', 'cancelled']
            ], @cycle_count.status || 'scheduled'), {}, { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :scheduled_date, "Fecha Programada", class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :scheduled_date, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :notes, "Notas", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :notes, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to 'Cancelar', admin_cycle_counts_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Crear Conteo Cíclico", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>