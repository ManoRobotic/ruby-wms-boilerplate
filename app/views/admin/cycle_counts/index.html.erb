<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              <%= t('admin.sidebar.cycle_counts') %>
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Nuevo Conteo Cíclico', new_admin_cycle_count_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Almacén</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ubicación</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Programada</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Completada</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Variaciones</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @cycle_counts.includes(:warehouse, :location, :cycle_count_items).each do |cycle_count| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= cycle_count.id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= cycle_count.warehouse.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= cycle_count.location&.coordinate_code || 'Todo el almacén' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_class = case cycle_count.status
                       when 'completed' then 'bg-green-100 text-green-800'
                       when 'in_progress' then 'bg-blue-100 text-blue-800'
                       when 'pending' then 'bg-yellow-100 text-yellow-800'
                       else 'bg-gray-100 text-gray-800'
                       end %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= cycle_count.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= cycle_count.scheduled_date&.strftime('%d/%m/%Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= cycle_count.completed_date&.strftime('%d/%m/%Y %H:%M') || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= pluralize(cycle_count.cycle_count_items.count, 'item') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% variances = cycle_count.cycle_count_items.where.not(variance: 0).count %>
                    <span class="<%= variances > 0 ? 'text-red-600 font-semibold' : 'text-green-600' %>">
                      <%= variances %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to 'Ver', admin_cycle_count_path(cycle_count), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <% if cycle_count.status == 'scheduled' %>
                      <%= button_to 'Iniciar', start_admin_cycle_count_path(cycle_count), method: :patch, class: "text-green-600 hover:text-green-900 mr-3 bg-transparent border-0 p-0", data: { turbo: false } %>
                    <% elsif cycle_count.status == 'in_progress' %>
                      <%= button_to 'Completar', complete_admin_cycle_count_path(cycle_count), method: :patch, class: "text-purple-600 hover:text-purple-900 mr-3 bg-transparent border-0 p-0", data: { turbo: false } %>
                    <% end %>
                    <%= link_to 'Editar', edit_admin_cycle_count_path(cycle_count), class: "text-yellow-600 hover:text-yellow-900 mr-3" %>
                    <% unless cycle_count.status == 'completed' %>
                      <%= button_to 'Eliminar', admin_cycle_count_path(cycle_count), method: :delete, 
                          data: { confirm: '¿Estás seguro?' }, 
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @cycle_counts %>
      </div>
    </section>
  </div>
</div>