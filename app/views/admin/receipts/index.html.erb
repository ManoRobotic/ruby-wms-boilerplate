<%# Recepciones Index View %>
<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" style="max-width: calc(100% - 0.75rem); margin-right: 0;" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Recepciones
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Nueva Recepción', new_admin_receipt_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Referencia</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Proveedor</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Almacén</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Esperada</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @receipts.each do |receipt| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= receipt.reference_number %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= receipt.supplier_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= receipt.warehouse.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_class = case receipt.status
                       when 'completed' then 'bg-green-100 text-green-800'
                       when 'receiving' then 'bg-purple-100 text-purple-800'
                       when 'scheduled' then 'bg-blue-100 text-blue-800'
                       when 'cancelled' then 'bg-red-100 text-red-800'
                       else 'bg-gray-100 text-gray-800'
                       end %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= receipt.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= receipt.expected_date&.strftime('%d/%m/%Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to 'Ver', admin_receipt_path(receipt), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <% if receipt.scheduled? %>
                      <%= button_to 'Iniciar', start_receiving_admin_receipt_path(receipt), method: :patch, class: "text-green-600 hover:text-green-900 mr-3 bg-transparent border-0 p-0", data: { turbo: false } %>
                    <% elsif receipt.receiving? %>
                      <%= button_to 'Completar', complete_admin_receipt_path(receipt), method: :patch, class: "text-purple-600 hover:text-purple-900 mr-3 bg-transparent border-0 p-0", data: { turbo: false } %>
                    <% end %>
                    <%= link_to 'Editar', edit_admin_receipt_path(receipt), class: "text-yellow-600 hover:text-yellow-900 mr-3" %>
                    <% if receipt.scheduled? || receipt.cancelled? %>
                      <%= button_to 'Eliminar', admin_receipt_path(receipt), method: :delete, 
                          data: { confirm: '¿Estás seguro?' }, 
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0" %>
                    <% else %>
                      <span class="text-gray-400 text-sm" title="Solo se pueden eliminar recepciones programadas o canceladas">
                        No eliminable
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @receipts %>
      </div>
    </section>
  </div>
</div><style>
@media (min-width: 768px) {
  [data-responsive-right-margin="true"] {
    max-width: calc(100% - 0.75rem) !important;
  }
}
@media (max-width: 767px) {
  [data-responsive-right-margin="true"] {
    max-width: 100% !important;
  }
}
</style>
