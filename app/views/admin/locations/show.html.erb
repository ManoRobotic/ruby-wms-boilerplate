<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Ubicación: <%= @location.code %>
            </h1>
            <p class="text-sm text-gray-600 mt-2">
              Almacén: <%= @warehouse.name %> | Zona: <%= @zone.name %>
            </p>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Editar', edit_admin_warehouse_zone_location_path(@warehouse, @zone, @location), class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
            <%= link_to 'Volver', admin_warehouse_zone_locations_path(@warehouse, @zone), class: "mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-8 bg-gray-50">
      <div class="container mx-auto px-4">
        <!-- Información General -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <!-- Detalles de la Ubicación -->
          <div class="lg:col-span-2 bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Información de la Ubicación</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-500">Código</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.code %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Tipo</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.location_type&.humanize %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Pasillo</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.aisle || 'N/A' %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Sección</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.section || 'N/A' %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Nivel</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.level || 'N/A' %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Posición</label>
                <p class="mt-1 text-sm text-gray-900"><%= @location.position || 'N/A' %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500">Estado</label>
                <p class="mt-1">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @location.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= @location.active? ? 'Activa' : 'Inactiva' %>
                  </span>
                </p>
              </div>
            </div>

            <!-- Capacidad -->
            <div class="mt-6">
              <h3 class="text-md font-semibold text-gray-900 mb-3">Capacidad</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-500">Capacidad Total</label>
                  <p class="mt-1 text-sm text-gray-900"><%= @location.capacity || 'No definida' %></p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-500">Volumen Actual</label>
                  <p class="mt-1 text-sm text-gray-900"><%= @location.current_volume || '0' %></p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-500">Peso Máximo</label>
                  <p class="mt-1 text-sm text-gray-900"><%= @location.max_weight || 'No definido' %> kg</p>
                </div>
              </div>
              
              <!-- Barra de utilización -->
              <% if @location.capacity && @location.capacity > 0 %>
                <div class="mt-4">
                  <div class="flex justify-between text-sm text-gray-600 mb-1">
                    <span>Utilización</span>
                    <span><%= ((@location.current_volume || 0) / @location.capacity * 100).round(1) %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full" style="width: <%= ((@location.current_volume || 0) / @location.capacity * 100).round(1) %>%"></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Estadísticas -->
          <div class="space-y-6">
            <!-- Productos Actuales -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Productos en Ubicación</h3>
              
              <div class="text-center">
                <span class="text-3xl font-bold text-blue-600"><%= @current_products.count %></span>
                <p class="text-sm text-gray-600">Productos diferentes</p>
              </div>
              
              <% if @current_products.any? %>
                <div class="mt-4 space-y-2">
                  <% @current_products.limit(5).each do |product| %>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-900 truncate"><%= product.name %></span>
                      <span class="text-gray-600"><%= product.stocks.where(location: @location).sum(:amount) %></span>
                    </div>
                  <% end %>
                  
                  <% if @current_products.count > 5 %>
                    <p class="text-xs text-gray-500 text-center">
                      y <%= @current_products.count - 5 %> más...
                    </p>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Tareas Pendientes -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Tareas Pendientes</h3>
              
              <div class="text-center">
                <span class="text-3xl font-bold text-orange-600"><%= @pending_tasks.count %></span>
                <p class="text-sm text-gray-600">Tareas activas</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Transacciones Recientes -->
        <% if @recent_transactions.any? %>
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Transacciones Recientes</h3>
            
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @recent_transactions.each do |transaction| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= transaction.created_at.strftime("%d/%m/%Y %H:%M") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= transaction.transaction_type.humanize %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= transaction.product.name %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= transaction.quantity %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>

        <!-- Fechas del Sistema -->
        <div class="mt-6 bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información del Sistema</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
            <div>
              <span class="font-medium">Creada:</span> <%= @location.created_at.strftime("%d/%m/%Y %H:%M") %>
            </div>
            <div>
              <span class="font-medium">Última actualización:</span> <%= @location.updated_at.strftime("%d/%m/%Y %H:%M") %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>