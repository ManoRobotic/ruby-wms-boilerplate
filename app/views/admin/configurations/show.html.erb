<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <!-- Company config data for JavaScript -->
    <script type="application/json" data-serial-company-config>
      <%= raw({
        serial_service_url: @admin.company&.serial_service_url
      }.to_json) %>
    </script>
    <!-- Header -->
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border lg:px-6 lg:py-8">
      <div class="flex flex-col items-center gap-4 mb-4 md:flex-row md:items-center md:justify-between mt-8">
        <div>
          <h1 class="font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
            Configuraciones
          </h1>
        </div>
      </div>
    </div>

    <!-- Formulario de Configuración -->
    <div class="px-6 pb-6">
      <!-- Layout 2 Columnas: Estado de Configuración y Comunicación Serial -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Columna Izquierda: Estado de Configuración -->
        <div class="bg-white rounded-xl border border-blue-gem-200 shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Estado de Configuración</h2>
            <div class="p-2 rounded-full bg-blue-gem-100">
              <i class="fa-solid fa-sliders text-blue-gem-600"></i>
            </div>
          </div>
          
          <%= form_with model: @admin.company, url: admin_configurations_path, local: true, method: :patch, class: "space-y-6" do |form| %>
            <div class="space-y-6">
              <div>
                <label for="companies" class="block text-sm font-medium text-gray-700 mb-2">
                  Nombre de la Empresa
                </label>
                <%= form.text_field :name, 
                    id: "companies",
                    placeholder: "Nombre de la empresa",
                    class: "block w-full text-sm rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500",
                    value: @admin.company&.name %>
                <p class="mt-1 text-xs text-gray-500">
                  Flexiempaques
                  Nombre de la empresa asociada.
                </p>
              </div>

              <div>
                <label for="serial_service_url" class="block text-sm font-medium text-gray-700 mb-2">
                  URL del Servicio Serial
                </label>
                <%= form.text_field :serial_service_url, 
                    id: "serial_service_url",
                    placeholder: "https://1xhof6kqlfil.share.zrok.io",
                    class: "block w-full text-sm rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500",
                    value: @admin.company&.serial_service_url %>
                <p class="mt-1 text-xs text-gray-500">
                  La URL del servicio serial para la báscula e impresora.
                </p>
              </div>

              <div>
                <label for="printer_model" class="block text-sm font-medium text-gray-700 mb-2">
                  Modelo de Impresora
                </label>
                <%= form.select :printer_model, 
                    options_for_select([['Zebra', 'zebra'], ['TSC', 'tsc']], @admin.company&.printer_model),
                    { prompt: 'Seleccionar modelo de impresora' },
                    { class: "block w-full text-sm rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500" } %>
                <p class="mt-1 text-xs text-gray-500">
                  Seleccione el modelo de su impresora de etiquetas.
                </p>
              </div>
            </div>
            
            <div class="mt-6">
              <%= form.submit "Guardar Configuración", 
                  class: "px-4 py-2 bg-blue-gem-500 text-white text-sm font-medium rounded-lg hover:bg-blue-gem-600 transition-colors" %>
            </div>
          <% end %>

          <div class="space-y-4 mt-6 pt-6 border-t border-black">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Puerto Serie (Báscula):</span>
              <% if @admin.company&.serial_port.present? %>
                <code class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded"><%= @admin.company.serial_port %></code>
              <% else %>
                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">No configurado</span>
              <% end %>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Puerto Impresora:</span>
              <% if @admin.company&.printer_port.present? %>
                <code class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded"><%= @admin.company.printer_port %></code>
              <% else %>
                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">No configurado</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Columna Derecha: Comunicación Serial -->
        <div class="bg-white rounded-xl border border-blue-gem-200 shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Comunicación Serial</h2>
            <div class="p-2 rounded-full bg-blue-gem-100">
              <i class="fa-solid fa-plug text-blue-gem-600"></i>
            </div>
          </div>
          
          <div class="serial-panel" 
               data-controller="serial" 
               data-serial-base-url-value="/api/serial"
               data-serial-auto-connect-value="true"
               data-serial-poll-interval-value="2000">
            <%= render 'admin/serial/panel_without_logs' %>
          </div>
        </div>
      </div>

      <!-- Panel de logs abajo de ambas columnas -->
      <div class="mt-6">
        <div class="logs-section bg-white rounded-xl border border-blue-gem-200 shadow-sm p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Registro de Comunicación Serial</h3>
            <button id="external-clear-logs" 
                    class="px-3 py-1 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50 transition-colors">
              Limpiar
            </button>
          </div>
          <div id="external-serial-logs" 
               class="h-32 overflow-y-auto p-3 bg-gray-900 text-green-400 text-xs font-mono rounded border border-gray-300">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal para resultado de conexión -->
<div data-controller="configuration">
  <div data-configuration-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div data-configuration-target="resultIcon" class="mx-auto flex items-center justify-center h-12 w-12 rounded-full mb-4">
          <!-- Icon will be inserted via JavaScript -->
        </div>
        <h3 data-configuration-target="resultTitle" class="text-lg leading-6 font-medium text-gray-900 mb-2">
          Resultado de Conexión
        </h3>
        <div class="mt-2 px-7 py-3">
          <p data-configuration-target="resultMessage" class="text-sm text-gray-500">
            <!-- Message will be inserted via JavaScript -->
          </p>
        </div>
        <div class="items-center px-4 py-3">
          <button data-action="click->configuration#closeModal" class="px-4 py-2 bg-blue-gem-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-gem-600 transition-colors">
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
