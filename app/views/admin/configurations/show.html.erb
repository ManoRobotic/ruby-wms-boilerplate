<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <!-- Header -->
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border lg:px-6 lg:py-8">
      <div class="flex flex-col items-center gap-4 mb-4 md:flex-row md:items-center md:justify-between mt-8">
        <div>
          <h1 class="font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
            Configuraciones
          </h1>
        </div>
        <% if current_user&.admin? || current_user&.supervisor? %>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to "Editar Configuración", 
                admin_configurations_edit_path, 
                class: "btn btn-primary btn-sm border border-gray-800" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Layout 2 Columnas -->
    <div class="px-6 pb-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Columna Izquierda: Comunicación Serial -->
        <div class="bg-white rounded-xl border border-blue-gem-200 shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Comunicación Serial</h2>
            <div class="p-2 rounded-full bg-blue-gem-100">
              <i class="fa-solid fa-plug text-blue-gem-600"></i>
            </div>
          </div>
          
          <div class="serial-panel" 
               data-controller="serial" 
               data-serial-base-url-value="/api/serial"
               data-serial-auto-connect-value="true"
               data-serial-poll-interval-value="2000">
            <%= render 'admin/serial/panel_without_logs' %>
          </div>
        </div>

        <!-- Columna Derecha: Estado de Configuración -->
        <div class="bg-white rounded-xl border border-blue-gem-200 shadow-sm p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Estado de Configuración</h2>
            <div class="p-2 rounded-full bg-blue-gem-100">
              <i class="fa-solid fa-sliders text-blue-gem-600"></i>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Puerto Serie (Báscula):</span>
              <% if @admin.company&.serial_port.present? %>
                <code class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded"><%= @admin.company.serial_port %></code>
              <% else %>
                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">No configurado</span>
              <% end %>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Puerto Impresora:</span>
              <% if @admin.company&.printer_port.present? %>
                <code class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded"><%= @admin.company.printer_port %></code>
              <% else %>
                <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">No configurado</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Panel de logs abajo de ambas columnas -->
      <div class="mt-6">
        <%= render 'admin/serial/logs_panel' %>
      </div>
    </div>
  </div>
</div>

<!-- Modal para resultado de conexión -->
<div data-controller="configuration">
  <div data-configuration-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div data-configuration-target="resultIcon" class="mx-auto flex items-center justify-center h-12 w-12 rounded-full mb-4">
          <!-- Icon will be inserted via JavaScript -->
        </div>
        <h3 data-configuration-target="resultTitle" class="text-lg leading-6 font-medium text-gray-900 mb-2">
          Resultado de Conexión
        </h3>
        <div class="mt-2 px-7 py-3">
          <p data-configuration-target="resultMessage" class="text-sm text-gray-500">
            <!-- Message will be inserted via JavaScript -->
          </p>
        </div>
        <div class="items-center px-4 py-3">
          <button data-action="click->configuration#closeModal" class="px-4 py-2 bg-blue-gem-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-gem-600 transition-colors">
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
