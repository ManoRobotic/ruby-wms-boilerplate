<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-1 mt-12 mb-16 min-h-screen flex flex-col" style="max-width: calc(100% - 0.75rem); margin-right: 0;" data-responsive-right-margin="true">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border flex-1">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Ordenes
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to t('admin.orders.new_order'), new_admin_order_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Order Status Cards -->
    <div class="px-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @admin_orders.count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">Órdenes Pagadas</p>
            </div>
          </div>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @not_fulfilled_orders.count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-yellow-800">Órdenes Pendientes</p>
            </div>
          </div>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= @admin_orders.count + @not_fulfilled_orders.count %></span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-blue-800">Total Órdenes</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <!-- Órdenes Pagadas -->
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 ml-8"><%= t('admin.orders.paid_orders') %></h2>
          <div class="overflow-x-auto">
            <table data-controller="table" 
                   data-table-sortable-value="true"
                   class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th data-sortable="order" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Orden</th>
                  <th data-sortable="status" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Estado</th>
                  <th data-sortable="warehouse" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Almacén</th>
                  <th data-sortable="date" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Fecha</th>
                  <th data-sortable="total" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Total</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @admin_orders.each do |admin_order| %>
                  <tr data-table-target="row" class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      #<%= admin_order.id.slice(1, 5) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        <%= admin_order.fulfilled ? 'Cumplida' : 'Pagada' %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= admin_order.warehouse&.name || 'Sin asignar' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= admin_order.created_at.strftime("%d/%m/%Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= number_to_currency(admin_order.total) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to 'Ver', admin_order_path(admin_order), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                      <%= link_to 'Editar', edit_admin_order_path(admin_order), class: "text-yellow-600 hover:text-yellow-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- Pagination for Paid Orders -->
          <%= render 'shared/table_pagination', collection: @admin_orders %>
        </div>

        <!-- Órdenes Pendientes -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4 ml-8"><%= t('admin.orders.unpaid_orders') %></h2>
          <div class="overflow-x-auto">
            <table data-controller="table" 
                   data-table-sortable-value="true"
                   class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th data-sortable="order" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Orden</th>
                  <th data-sortable="status" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Estado</th>
                  <th data-sortable="warehouse" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Almacén</th>
                  <th data-sortable="date" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Fecha</th>
                  <th data-sortable="total" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Total</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @not_fulfilled_orders.each do |admin_order| %>
                  <tr data-table-target="row" class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      #<%= admin_order.id.slice(1, 5) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                        Pendiente
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= admin_order.warehouse&.name || 'Sin asignar' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= admin_order.created_at.strftime("%d/%m/%Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= number_to_currency(admin_order.total) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to 'Ver', admin_order_path(admin_order), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                      <%= link_to 'Editar', edit_admin_order_path(admin_order), class: "text-yellow-600 hover:text-yellow-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- Pagination for Unpaid Orders -->
          <%= render 'shared/table_pagination', collection: @not_fulfilled_orders %>
        </div>
      </div>
    </section>
  </div>
</div>
<style>
@media (min-width: 768px) {
  [data-responsive-right-margin="true"] {
    max-width: calc(100% - 0.75rem) !important;
  }
}
@media (max-width: 767px) {
  [data-responsive-right-margin="true"] {
    max-width: 100% !important;
  }
}
</style>
