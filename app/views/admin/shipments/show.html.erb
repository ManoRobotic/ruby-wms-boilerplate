<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8">
  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              Envío #<%= @shipment.id[0..7] %>
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Editar', edit_admin_shipment_path(@shipment), class: "mt-12 flex items-center gap-3 rounded-lg bg-blue-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85 mr-2" %>
            <%= link_to 'Volver', admin_shipments_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-gray-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Información del Envío</h3>
          <dl class="space-y-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Orden</dt>
              <dd class="text-sm text-gray-900">
                <%= link_to "##{@shipment.order.id[0..7]}", admin_order_path(@shipment.order), class: "text-blue-600 hover:text-blue-800 underline" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Cliente</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.order.customer_email %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Almacén</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.warehouse.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Transportista</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.carrier || 'N/A' %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Número de Seguimiento</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.tracking_number || 'N/A' %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Estado</dt>
              <dd class="text-sm text-gray-900">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                  case @shipment.status
                  when 'preparing' then 'bg-yellow-100 text-yellow-800'
                  when 'shipped' then 'bg-blue-100 text-blue-800'
                  when 'in_transit' then 'bg-indigo-100 text-indigo-800'
                  when 'delivered' then 'bg-green-100 text-green-800'
                  when 'returned' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end
                %>">
                  <%= @shipment.status.humanize %>
                </span>
              </dd>
            </div>
          </dl>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Detalles de Envío</h3>
          <dl class="space-y-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Creado</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.created_at.strftime('%d/%m/%Y %H:%M') %></dd>
            </div>
            <% if @shipment.shipped_date %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Fecha de Envío</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.shipped_date.strftime('%d/%m/%Y') %></dd>
            </div>
            <% end %>
            <% if @shipment.delivered_date %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Fecha de Entrega</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.delivered_date.strftime('%d/%m/%Y') %></dd>
            </div>
            <% end %>
            <% if @shipment.total_weight %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Peso Total</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.total_weight %> kg</dd>
            </div>
            <% end %>
            <% if @shipment.shipping_cost %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Costo de Envío</dt>
              <dd class="text-sm text-gray-900"><%= number_to_currency(@shipment.shipping_cost) %></dd>
            </div>
            <% end %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Creado por</dt>
              <dd class="text-sm text-gray-900"><%= @shipment.admin.email %></dd>
            </div>
          </dl>
        </div>

        <% if @shipment.recipient_info.present? %>
        <div class="md:col-span-2 bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-medium text-gray-900 mb-2">Información del Destinatario</h3>
          <p class="text-sm text-gray-700"><%= simple_format(@shipment.recipient_info) %></p>
        </div>
        <% end %>
      </div>

      <!-- Action buttons -->
      <% unless @shipment.delivered? || @shipment.returned? %>
      <div class="mt-6 flex flex-wrap gap-2">
        <% if @shipment.preparing? %>
          <%= button_to 'Marcar como Enviado', ship_admin_shipment_path(@shipment), method: :patch, 
              class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium border-none cursor-pointer",
              data: { confirm: "¿Marcar este envío como enviado?", turbo: false } %>
        <% end %>
        
        <% if @shipment.shipped? || @shipment.in_transit? %>
          <%= button_to 'Marcar como Entregado', deliver_admin_shipment_path(@shipment), method: :patch, 
              class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm font-medium border-none cursor-pointer",
              data: { confirm: "¿Marcar este envío como entregado?", turbo: false } %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>