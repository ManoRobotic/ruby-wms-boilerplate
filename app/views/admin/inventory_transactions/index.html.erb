<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-8 mb-8">
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border">
    <div class="relative p-4 text-gray-700 bg-white bg-clip-border">
      <div class="container mx-auto">
        <div class="flex flex-col items-center gap-8 px-4 mb-4 md:flex-row md:items-center md:justify-between">
          <div>
            <h1 class="mt-12 font-sans text-xl font-semibold leading-snug tracking-normal text-center md:text-left text-blue-gray-900">
              <%= t('admin.sidebar.inventory_transactions') %>
            </h1>
          </div>
          <div class="flex justify-center gap-2 shrink-0 md:w-auto">
            <%= link_to 'Nueva Transacción', new_admin_inventory_transaction_path, class: "mt-12 flex items-center gap-3 rounded-lg bg-yellow-500 py-2 px-4 text-white font-bold shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Filters -->
    <div class="px-4 mb-6">
      <%= render 'shared/table_filters', 
          search_placeholder: 'Buscar por producto, ubicación o referencia...',
          filters: [
            {
              name: :warehouse_id,
              type: 'select',
              label: 'Almacén',
              options: Warehouse.all.pluck(:name, :id),
              prompt: 'Todos los almacenes'
            },
            {
              name: :transaction_type,
              type: 'select', 
              label: 'Tipo de Transacción',
              options: InventoryTransaction::TRANSACTION_TYPES.map { |t| [t.humanize, t] },
              prompt: 'Todos los tipos'
            },
            {
              name: :period,
              type: 'select',
              label: 'Período',
              options: [
                ['Hoy', 'today'],
                ['Esta semana', 'this_week'], 
                ['Este mes', 'this_month']
              ],
              prompt: 'Sin filtro de período'
            },
            {
              name: :start_date,
              type: 'date',
              label: 'Fecha desde'
            },
            {
              name: :end_date,
              type: 'date', 
              label: 'Fecha hasta'
            }
          ] %>
          
      <!-- Action buttons section -->
      <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="flex flex-wrap gap-2">
          <%= link_to 'Reporte de Movimientos', movement_report_admin_inventory_transactions_path, 
              class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm font-medium transition-colors" %>
          <%= link_to 'Resumen Diario', daily_summary_admin_inventory_transactions_path, 
              class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors" %>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container mx-auto">
        <div class="overflow-x-auto">
          <table data-controller="table" 
                 data-table-sortable-value="true"
                 class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th data-sortable="date" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Fecha</th>
                <th data-sortable="type" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Tipo</th>
                <th data-sortable="product" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Producto</th>
                <th data-sortable="location" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Ubicación</th>
                <th data-sortable="quantity" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Cantidad</th>
                <th data-sortable="cost" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Costo Unitario</th>
                <th data-sortable="reason" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Razón</th>
                <th data-sortable="admin" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">Admin</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @transactions&.each do |transaction| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= transaction.created_at.strftime('%d/%m/%Y %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <% type_class = case transaction.transaction_type
                       when 'receipt', 'putaway', 'adjustment_in' then 'bg-green-100 text-green-800'
                       when 'pick', 'shipment', 'adjustment_out' then 'bg-red-100 text-red-800'
                       when 'move', 'transfer' then 'bg-blue-100 text-blue-800'
                       else 'bg-gray-100 text-gray-800'
                       end %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= type_class %>">
                      <%= transaction.transaction_type.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= transaction.product.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.location&.coordinate_code || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <span class="<%= transaction.quantity >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= transaction.quantity >= 0 ? '+' : '' %><%= transaction.quantity %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.unit_cost ? number_to_currency(transaction.unit_cost) : 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= truncate(transaction.reason, length: 30) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.admin.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to 'Ver', admin_inventory_transaction_path(transaction), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <% recent_and_own = transaction.created_at > 24.hours.ago && current_admin == transaction.admin %>
                    <% is_adjustment = transaction.transaction_type.include?('adjustment') %>
                    <% if recent_and_own || is_adjustment %>
                      <%= button_to 'Eliminar', admin_inventory_transaction_path(transaction), method: :delete, 
                          data: { 
                            confirm: "¿Estás seguro de que deseas eliminar esta transacción?",
                            turbo: false
                          }, 
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0" %>
                    <% else %>
                      <span class="text-gray-400 text-sm" title="<%= transaction.created_at <= 24.hours.ago ? 'Más de 24h' : 'No es tu transacción' %>">
                        No eliminable
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <%= render 'shared/table_pagination', collection: @transactions %>
        
      </div>
    </section>
  </div>
</div>