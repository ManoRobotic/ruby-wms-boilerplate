
<div class="relative flex items-center justify-center min-h-screen overflow-hidden bg-gray-200">
  <!-- Blurred gradient background -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-[#4421e0] to-[#57ff0f]"></div>
    <div class="absolute inset-0 backdrop-blur-3xl"></div>
  </div>
  
  

<div class="flex items-center justify-center min-h-full p-4 bg-gray-100 sm:min-h-screen">
  <div class="relative flex flex-col w-full max-w-md p-4 bg-white rounded-lg shadow-md sm:p-6">
    <h2 class="mb-2 text-xl font-semibold text-center text-slate-800">
      Sign up
    </h2>
    <p class="mb-4 text-sm text-center text-slate-500">
      Create a new account by filling in your details.
    </p>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-4 w-full") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="flex flex-col gap-4 mb-4">
        <div>
          <%= f.label :email, class: "block mb-1 text-xs text-slate-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 focus:outline-none focus:border-slate-400" %>
        </div>

        <div>
          <%= f.label :password, class: "block mb-1 text-xs text-slate-600" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-slate-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 focus:outline-none focus:border-slate-400" %>
        </div>

        <div>
          <%= f.label :name, class: "block mb-1 text-xs text-slate-600" %>
          <%= f.text_field :name, autocomplete: "name", class: "w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 focus:outline-none focus:border-slate-400" %>
        </div>

        <div>
          <%= f.label :address, class: "block mb-1 text-xs text-slate-600" %>
          <%= f.text_field :address, autocomplete: "address", class: "w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 focus:outline-none focus:border-slate-400" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block mb-1 text-xs text-slate-600" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 focus:outline-none focus:border-slate-400" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "w-full bg-slate-800 py-2 rounded-md text-center text-white text-sm transition hover:bg-slate-700 focus:bg-slate-700" %>
      </div>
    <% end %>

    <div class="flex justify-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
  </div>
